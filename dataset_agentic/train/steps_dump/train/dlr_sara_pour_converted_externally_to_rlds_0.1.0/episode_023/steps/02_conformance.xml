<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to brown_pitcher -->
      <Action ID="NAVIGATE_TO" obj="brown_pitcher"/>
      <!-- Grasp brown_pitcher -->
      <Action ID="GRASP" obj="brown_pitcher"/>
      <!-- Navigate to mug -->
      <Action ID="NAVIGATE_TO" obj="mug"/>
      <!-- Pour into mug -->
      <Action ID="POUR" obj="mug"/>
      <!-- Release -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>