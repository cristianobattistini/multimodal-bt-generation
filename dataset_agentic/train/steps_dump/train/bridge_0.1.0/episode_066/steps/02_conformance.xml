<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot"/>
      <!-- Grasp pot -->
      <Action ID="GRASP" obj="pot"/>
      <!-- Navigate to yellow_cloth -->
      <Action ID="NAVIGATE_TO" obj="yellow_cloth"/>
      <!-- Place on yellow_cloth -->
      <Action ID="PLACE_ON_TOP" obj="yellow_cloth"/>
    </Sequence>
  </BehaviorTree>
</root>