<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to water_bottle -->
      <Action ID="NAVIGATE_TO" obj="water_bottle"/>
      <!-- Grasp water_bottle -->
      <Action ID="GRASP" obj="water_bottle"/>
      <!-- Flip water_bottle upright -->
      <Action ID="FLIP" obj="water_bottle"/>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table"/>
      <!-- Place on table (upright) -->
      <Action ID="PLACE_ON_TOP" obj="table"/>
    </Sequence>
  </BehaviorTree>
</root>