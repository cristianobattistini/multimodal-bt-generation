<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to cloth -->
      <Action ID="NAVIGATE_TO" obj="cloth"/>
      <!-- Grasp cloth -->
      <Action ID="GRASP" obj="cloth"/>
      <!-- Fold cloth (fold one edge toward opposite edge) -->
      <Action ID="FOLD" obj="cloth"/>
      <!-- Fold cloth again (reduce size by folding another edge) -->
      <Action ID="FOLD" obj="cloth"/>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table"/>
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table"/>
      <!-- Release -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>