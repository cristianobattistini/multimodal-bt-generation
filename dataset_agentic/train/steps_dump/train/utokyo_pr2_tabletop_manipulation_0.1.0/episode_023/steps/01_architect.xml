<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pink_cloth -->
      <Action ID="NAVIGATE_TO" obj="pink_cloth"/>
      <!-- Grasp pink_cloth -->
      <Action ID="GRASP" obj="pink_cloth"/>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table"/>
      <!-- Fold pink_cloth (fold edge toward center) -->
      <Action ID="FOLD" obj="pink_cloth"/>
      <!-- Fold pink_cloth (repeat to make smaller rectangle) -->
      <Action ID="FOLD" obj="pink_cloth"/>
      <!-- Smooth the folded cloth -->
      <Action ID="WIPE" obj="pink_cloth"/>
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table"/>
    </Sequence>
  </BehaviorTree>
</root>