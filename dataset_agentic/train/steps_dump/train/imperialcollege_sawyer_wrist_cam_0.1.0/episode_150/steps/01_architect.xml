<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to bottle -->
      <Action ID="NAVIGATE_TO" obj="bottle"/>
      <!-- Grasp bottle -->
      <Action ID="GRASP" obj="bottle"/>
      <!-- Open bottle -->
      <Action ID="OPEN" obj="bottle"/>
      <!-- Release -->
      <Action ID="RELEASE"/>
      <!-- Navigate to bottle_cap -->
      <Action ID="NAVIGATE_TO" obj="bottle_cap"/>
      <!-- Grasp bottle_cap -->
      <Action ID="GRASP" obj="bottle_cap"/>
      <!-- Navigate to blue_table -->
      <Action ID="NAVIGATE_TO" obj="blue_table"/>
      <!-- Place on blue_table -->
      <Action ID="PLACE_ON_TOP" obj="blue_table"/>
    </Sequence>
  </BehaviorTree>
</root>