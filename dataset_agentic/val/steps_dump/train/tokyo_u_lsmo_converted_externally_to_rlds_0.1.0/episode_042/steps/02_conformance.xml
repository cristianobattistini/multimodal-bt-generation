<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to table (approach around the stack of books) -->
      <Action ID="NAVIGATE_TO" obj="table"/>
      <!-- Navigate to pen_holder (clear approach avoiding books) -->
      <Action ID="NAVIGATE_TO" obj="pen_holder"/>
      <!-- Navigate to blue_pen -->
      <Action ID="NAVIGATE_TO" obj="blue_pen"/>
      <!-- Grasp blue_pen -->
      <Action ID="GRASP" obj="blue_pen"/>
    </Sequence>
  </BehaviorTree>
</root>