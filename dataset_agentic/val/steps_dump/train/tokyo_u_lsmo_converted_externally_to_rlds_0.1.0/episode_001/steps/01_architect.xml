<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to table (approach from side to avoid stack_of_books) -->
      <Action ID="NAVIGATE_TO" obj="table"/>
      <!-- Navigate to pen_holder (approach opening, avoiding stack_of_books) -->
      <Action ID="NAVIGATE_TO" obj="pen_holder"/>
      <!-- Navigate to blue_pen -->
      <Action ID="NAVIGATE_TO" obj="blue_pen"/>
      <!-- Grasp blue_pen -->
      <Action ID="GRASP" obj="blue_pen"/>
    </Sequence>
  </BehaviorTree>
</root>