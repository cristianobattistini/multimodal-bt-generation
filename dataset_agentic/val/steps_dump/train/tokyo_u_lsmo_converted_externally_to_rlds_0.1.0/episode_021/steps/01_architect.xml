<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to work_surface (approach from side to avoid pen_holder obstacle) -->
      <Action ID="NAVIGATE_TO" obj="work_surface"/>
      <!-- Navigate to scissors (final approach around obstacle) -->
      <Action ID="NAVIGATE_TO" obj="scissors"/>
      <!-- Grasp scissors -->
      <Action ID="GRASP" obj="scissors"/>
      <!-- Release -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>