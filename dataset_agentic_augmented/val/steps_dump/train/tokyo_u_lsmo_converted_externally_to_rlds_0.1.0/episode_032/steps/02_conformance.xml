<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to stack_of_books -->
      <Action ID="NAVIGATE_TO" obj="stack_of_books" />
      <!-- Navigate to pen_holder -->
      <Action ID="NAVIGATE_TO" obj="pen_holder" />
      <!-- Check blue_pen is reachable before GRASP -->
      <Condition ID="IS_REACHABLE" obj="blue_pen" />
      <!-- Fallback: if GRASP blue_pen fails, try alternative to reposition -->
      <Fallback>
        <!-- Timeout: GRASP blue_pen within 10s -->
        <Timeout msec="10000">
          <!-- Grasp blue_pen -->
          <Action ID="GRASP" obj="blue_pen" />
        </Timeout>
        <Sequence>
          <!-- Push blue_pen forward toward front edge of table -->
          <Action ID="PUSH" obj="blue_pen" />
          <!-- Grasp blue_pen -->
          <Action ID="GRASP" obj="blue_pen" />
        </Sequence>
      </Fallback>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
