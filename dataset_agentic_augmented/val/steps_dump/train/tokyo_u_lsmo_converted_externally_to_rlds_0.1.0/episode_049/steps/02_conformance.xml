<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Navigate to scissors -->
      <Action ID="NAVIGATE_TO" obj="scissors" />
      <!-- Fallback: if GRASP scissors fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP scissors up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Grasp scissors -->
          <Action ID="GRASP" obj="scissors" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push scissors forward toward front edge of table -->
          <Action ID="PUSH" obj="scissors" />
          <!-- Grasp scissors -->
          <Action ID="GRASP" obj="scissors" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
