<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <Sequence>
        <!-- Check blue_pen is reachable before NAVIGATE_TO -->
        <Condition ID="IS_REACHABLE" obj="blue_pen" />
        <!-- Navigate to blue_pen -->
        <Action ID="NAVIGATE_TO" obj="blue_pen" />
      </Sequence>
      <!-- Grasp blue_pen -->
      <Action ID="GRASP" obj="blue_pen" />
    </Sequence>
  </BehaviorTree>
</root>
