<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to grid_clamp -->
      <Action ID="NAVIGATE_TO" obj="grid_clamp" />
      <!-- Grasp grid_clamp -->
      <Action ID="GRASP" obj="grid_clamp" />
      <!-- Navigate to grid_surface -->
      <Action ID="NAVIGATE_TO" obj="grid_surface" />
      <!-- Check grid_surface is holding before PLACE_ON_TOP -->
      <Condition ID="IS_HOLDING" obj="grid_surface" />
      <!-- Fallback: if PLACE_ON_TOP grid_surface fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry PLACE_ON_TOP grid_surface up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Place on grid_surface -->
          <Action ID="PLACE_ON_TOP" obj="grid_surface" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push grid_surface forward toward front edge of table -->
          <Action ID="PUSH" obj="grid_surface" />
          <!-- Place on grid_surface -->
          <Action ID="PLACE_ON_TOP" obj="grid_surface" />
        </Sequence>
      </Fallback>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
