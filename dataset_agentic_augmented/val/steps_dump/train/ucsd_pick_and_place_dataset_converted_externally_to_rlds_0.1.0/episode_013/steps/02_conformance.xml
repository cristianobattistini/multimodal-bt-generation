<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Fallback: if GRASP pot fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP pot up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Timeout: GRASP pot within 15s -->
          <Timeout msec="15000">
            <!-- Grasp pot -->
            <Action ID="GRASP" obj="pot" />
          </Timeout>
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push pot forward toward front edge of table -->
          <Action ID="PUSH" obj="pot" />
          <!-- Grasp pot -->
          <Action ID="GRASP" obj="pot" />
        </Sequence>
      </Fallback>
      <!-- Navigate to sink -->
      <Action ID="NAVIGATE_TO" obj="sink" />
      <!-- Place inside sink -->
      <Action ID="PLACE_INSIDE" obj="sink" />
    </Sequence>
  </BehaviorTree>
</root>
