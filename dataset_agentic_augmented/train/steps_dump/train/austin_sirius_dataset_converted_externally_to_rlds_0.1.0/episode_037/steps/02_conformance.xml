<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to kcup_holder -->
      <Action ID="NAVIGATE_TO" obj="kcup_holder" />
      <!-- Open kcup_holder -->
      <Action ID="OPEN" obj="kcup_holder" />
      <!-- Navigate to kcup -->
      <Action ID="NAVIGATE_TO" obj="kcup" />
      <!-- Grasp kcup -->
      <Action ID="GRASP" obj="kcup" />
      <!-- Navigate to kcup_holder -->
      <Action ID="NAVIGATE_TO" obj="kcup_holder" />
      <!-- Fallback: if PLACE_INSIDE kcup_holder fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry PLACE_INSIDE kcup_holder up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Place inside kcup_holder -->
          <Action ID="PLACE_INSIDE" obj="kcup_holder" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push kcup_holder forward toward front edge of table -->
          <Action ID="PUSH" obj="kcup_holder" />
          <!-- Place inside kcup_holder -->
          <Action ID="PLACE_INSIDE" obj="kcup_holder" />
        </Sequence>
      </Fallback>
      
      <!-- Close kcup_holder -->
      <Action ID="CLOSE" obj="kcup_holder" />
    </Sequence>
  </BehaviorTree>
</root>
