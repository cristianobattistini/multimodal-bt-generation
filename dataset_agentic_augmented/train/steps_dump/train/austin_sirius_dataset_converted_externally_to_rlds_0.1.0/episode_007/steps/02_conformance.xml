<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to blue_gear -->
      <Action ID="NAVIGATE_TO" obj="blue_gear" />
      <!-- Check blue_gear is graspable before GRASP -->
      <Condition ID="IS_GRASPABLE" obj="blue_gear" />
      <!-- Retry GRASP blue_gear up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Timeout: GRASP blue_gear within 10s -->
        <Timeout msec="10000">
          <!-- Grasp blue_gear -->
          <Action ID="GRASP" obj="blue_gear" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Navigate to right_peg -->
      <Action ID="NAVIGATE_TO" obj="right_peg" />
      <!-- Hang bag on right_peg -->
      <Action ID="HANG" obj="right_peg" />
      <!-- Release -->
      <Action ID="RELEASE" />
      <!-- Navigate to red_gear -->
      <Action ID="NAVIGATE_TO" obj="red_gear" />
      <!-- Grasp red_gear -->
      <Action ID="GRASP" obj="red_gear" />
      <!-- Navigate to right_peg -->
      <Action ID="NAVIGATE_TO" obj="right_peg" />
      <!-- Hang bag on right_peg -->
      <Action ID="HANG" obj="right_peg" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
