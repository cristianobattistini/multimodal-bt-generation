<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to water_bottle -->
      <Action ID="NAVIGATE_TO" obj="water_bottle" />
      <!-- Check water_bottle is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="water_bottle" />
      <!-- Fallback: if GRASP water_bottle fails, try alternative to reposition -->
      <Fallback>
        <!-- Timeout: GRASP water_bottle within 10s -->
        <Timeout msec="10000">
          <!-- Grasp water_bottle -->
          <Action ID="GRASP" obj="water_bottle" />
        </Timeout>
        <Sequence>
          <!-- Push water_bottle forward toward front edge of table -->
          <Action ID="PUSH" obj="water_bottle" />
          <!-- Grasp water_bottle -->
          <Action ID="GRASP" obj="water_bottle" />
        </Sequence>
      </Fallback>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
