<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to top_drawer -->
      <Action ID="NAVIGATE_TO" obj="top_drawer" />
      <!-- Navigate to orange -->
      <Action ID="NAVIGATE_TO" obj="orange" />
      <!-- Grasp orange -->
      <Action ID="GRASP" obj="orange" />
      <!-- Navigate to counter -->
      <Action ID="NAVIGATE_TO" obj="counter" />
      <!-- Check counter is holding before PLACE_ON_TOP -->
      <Condition ID="IS_HOLDING" obj="counter" />
      <!-- Retry PLACE_ON_TOP counter up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Place on counter -->
        <Action ID="PLACE_ON_TOP" obj="counter" />
      </RetryUntilSuccessful>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
