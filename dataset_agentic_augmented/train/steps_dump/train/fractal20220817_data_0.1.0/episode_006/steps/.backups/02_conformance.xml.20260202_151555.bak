<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <Sequence>
        <!-- Check top_drawer is reachable before NAVIGATE_TO -->
        <Condition ID="IS_REACHABLE" obj="top_drawer" />
        <!-- Navigate to top_drawer -->
        <Action ID="NAVIGATE_TO" obj="top_drawer" />
      </Sequence>
      <!-- Grasp sponge -->
      <Action ID="GRASP" obj="sponge" />
      <!-- Navigate to counter -->
      <Action ID="NAVIGATE_TO" obj="counter" />
      <!-- Place on counter -->
      <Action ID="PLACE_ON_TOP" obj="counter" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
