<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Timeout: NAVIGATE_TO water_bottle within 10s -->
      <Timeout msec="10000">
        <!-- Navigate to water_bottle -->
        <Action ID="NAVIGATE_TO" obj="water_bottle" />
      </Timeout>
      <!-- Grasp water_bottle -->
      <Action ID="GRASP" obj="water_bottle" />
      <!-- Return water_bottle upright (flip) -->
      <Action ID="FLIP" obj="water_bottle" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
