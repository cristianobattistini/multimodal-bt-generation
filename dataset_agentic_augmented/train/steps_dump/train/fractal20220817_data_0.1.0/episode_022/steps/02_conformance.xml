<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pepsi_can -->
      <Action ID="NAVIGATE_TO" obj="pepsi_can" />
      <!-- Check pepsi_can is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="pepsi_can" />
      <!-- Retry GRASP pepsi_can up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Timeout: GRASP pepsi_can within 10s -->
        <Timeout msec="10000">
          <!-- Grasp pepsi_can -->
          <Action ID="GRASP" obj="pepsi_can" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Navigate to 7up_can -->
      <Action ID="NAVIGATE_TO" obj="7up_can" />
      <!-- Place next to 7up_can -->
      <Action ID="PLACE_NEXT_TO" obj="7up_can" />
    </Sequence>
  </BehaviorTree>
</root>
