<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Execute subtree ApproachGreenCloth -->
      <SubTree ID="ApproachGreenCloth" />
      <!-- Push green_cloth forward toward front edge of table -->
      <Action ID="PUSH" obj="green_cloth" />
    </Sequence>
  </BehaviorTree>
  <!-- Subtree definition ApproachGreenCloth -->
  <BehaviorTree ID="ApproachGreenCloth">
    <Sequence>
      <!-- Navigate to green_cloth -->
      <Action ID="NAVIGATE_TO" obj="green_cloth" />
      <!-- Retry PUSH green_cloth up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Grasp green_cloth -->
        <Action ID="GRASP" obj="green_cloth" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
