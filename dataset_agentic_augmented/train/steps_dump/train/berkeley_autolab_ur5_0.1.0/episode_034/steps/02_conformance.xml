<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to blue_cup -->
      <Action ID="NAVIGATE_TO" obj="blue_cup" />
      <!-- Check blue_cup is reachable before GRASP -->
      <Condition ID="IS_REACHABLE" obj="blue_cup" />
      <!-- Fallback: if GRASP blue_cup fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP blue_cup up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Grasp blue_cup -->
          <Action ID="GRASP" obj="blue_cup" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push blue_cup forward toward front edge of table -->
          <Action ID="PUSH" obj="blue_cup" />
          <!-- Grasp blue_cup -->
          <Action ID="GRASP" obj="blue_cup" />
        </Sequence>
      </Fallback>
      <!-- Navigate to brown_cup -->
      <Action ID="NAVIGATE_TO" obj="brown_cup" />
      <!-- Place inside brown_cup -->
      <Action ID="PLACE_INSIDE" obj="brown_cup" />
    </Sequence>
  </BehaviorTree>
</root>
