<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to dishwasher -->
      <Action ID="NAVIGATE_TO" obj="dishwasher" />
      <!-- Fallback: if GRASP dishwasher fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp dishwasher -->
        <Action ID="GRASP" obj="dishwasher" />
        <Sequence>
          <!-- Push dishwasher forward toward front edge of table -->
          <Action ID="PUSH" obj="dishwasher" />
          <!-- Grasp dishwasher -->
          <Action ID="GRASP" obj="dishwasher" />
        </Sequence>
      </Fallback>
      <!-- Open dishwasher -->
      <Action ID="OPEN" obj="dishwasher" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
