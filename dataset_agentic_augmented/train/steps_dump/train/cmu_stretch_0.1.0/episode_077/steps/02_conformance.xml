<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <Sequence>
        <!-- Check lid is visible before NAVIGATE_TO -->
        <Condition ID="IS_VISIBLE" obj="lid" />
        <!-- Navigate to lid -->
        <Action ID="NAVIGATE_TO" obj="lid" />
      </Sequence>
      <!-- Grasp lid -->
      <Action ID="GRASP" obj="lid" />
    </Sequence>
  </BehaviorTree>
</root>
