<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Execute subtree ApproachDoor -->
      <SubTree ID="ApproachDoor" />
    </Sequence>
  </BehaviorTree>
  <!-- Subtree definition ApproachDoor -->
  <BehaviorTree ID="ApproachDoor">
    <Sequence>
      <!-- Timeout: NAVIGATE_TO door within 20s -->
      <Timeout msec="20000">
        <!-- Navigate to door -->
        <Action ID="NAVIGATE_TO" obj="door" />
      </Timeout>
      <!-- Open door -->
      <Action ID="OPEN" obj="door" />
    </Sequence>
  </BehaviorTree>
</root>
