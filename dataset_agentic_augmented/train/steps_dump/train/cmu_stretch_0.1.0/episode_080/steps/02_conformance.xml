<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to dishwasher -->
      <Action ID="NAVIGATE_TO" obj="dishwasher" />
      <!-- Navigate to dishwasher_handle -->
      <Action ID="NAVIGATE_TO" obj="dishwasher_handle" />
      <!-- Grasp dishwasher_handle -->
      <Action ID="GRASP" obj="dishwasher_handle" />
      <!-- Retry OPEN dishwasher up to 5 attempts -->
      <RetryUntilSuccessful num_attempts="5">
        <!-- Open dishwasher -->
        <Action ID="OPEN" obj="dishwasher" />
      </RetryUntilSuccessful>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
