<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to dishwasher_door -->
      <Action ID="NAVIGATE_TO" obj="dishwasher_door" />
      <!-- Fallback: if GRASP dishwasher_door fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP dishwasher_door up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Grasp dishwasher_door -->
          <Action ID="GRASP" obj="dishwasher_door" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push dishwasher_door forward toward front edge of table -->
          <Action ID="PUSH" obj="dishwasher_door" />
          <!-- Grasp dishwasher_door -->
          <Action ID="GRASP" obj="dishwasher_door" />
        </Sequence>
      </Fallback>
      <!-- Open dishwasher_door -->
      <Action ID="OPEN" obj="dishwasher_door" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
