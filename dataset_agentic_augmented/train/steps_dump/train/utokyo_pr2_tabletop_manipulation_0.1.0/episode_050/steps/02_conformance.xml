<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pink_cloth -->
      <Action ID="NAVIGATE_TO" obj="pink_cloth" />
      <!-- Grasp pink_cloth -->
      <Action ID="GRASP" obj="pink_cloth" />
      <!-- Fold pink_cloth -->
      <Action ID="FOLD" obj="pink_cloth" />
      <Sequence>
        <!-- Check pink_cloth is holding before WIPE -->
        <Condition ID="IS_HOLDING" obj="pink_cloth" />
        <!-- Wipe pink_cloth -->
        <Action ID="WIPE" obj="pink_cloth" />
      </Sequence>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
