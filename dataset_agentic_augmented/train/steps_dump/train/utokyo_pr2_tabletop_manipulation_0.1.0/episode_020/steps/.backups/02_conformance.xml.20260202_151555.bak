<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pink_cloth -->
      <Action ID="NAVIGATE_TO" obj="pink_cloth" />
      <!-- Grasp pink_cloth -->
      <Action ID="GRASP" obj="pink_cloth" />
      <!-- Fallback: if FOLD pink_cloth fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry FOLD pink_cloth up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Timeout: FOLD pink_cloth within 10s -->
          <Timeout msec="10000">
            <!-- Fold pink_cloth -->
            <Action ID="FOLD" obj="pink_cloth" />
          </Timeout>
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Unfold pink_cloth -->
          <Action ID="UNFOLD" obj="pink_cloth" />
          <!-- Fold pink_cloth -->
          <Action ID="FOLD" obj="pink_cloth" />
        </Sequence>
      </Fallback>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
