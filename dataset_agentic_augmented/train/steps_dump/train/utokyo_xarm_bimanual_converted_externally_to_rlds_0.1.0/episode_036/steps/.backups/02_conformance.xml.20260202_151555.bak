<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to towel -->
      <Action ID="NAVIGATE_TO" obj="towel" />
      <!-- Grasp towel -->
      <Action ID="GRASP" obj="towel" />
      <!-- Unfold towel -->
      <Action ID="UNFOLD" obj="towel" />
      <!-- Navigate to green_mat -->
      <Action ID="NAVIGATE_TO" obj="green_mat" />
      <!-- Fallback: if PLACE_ON_TOP green_mat fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place on green_mat -->
        <Action ID="PLACE_ON_TOP" obj="green_mat" />
        <Sequence>
          <!-- Push green_mat forward toward front edge of table -->
          <Action ID="PUSH" obj="green_mat" />
          <!-- Place on green_mat -->
          <Action ID="PLACE_ON_TOP" obj="green_mat" />
        </Sequence>
      </Fallback>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
