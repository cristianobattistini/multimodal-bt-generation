<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to towel -->
      <Action ID="NAVIGATE_TO" obj="towel" />
      <!-- Grasp towel -->
      <Action ID="GRASP" obj="towel" />
      <!-- Unfold towel -->
      <Action ID="UNFOLD" obj="towel" />
      <Sequence>
        <!-- Check table is visible before NAVIGATE_TO -->
        <Condition ID="IS_VISIBLE" obj="table" />
        <!-- Navigate to table -->
        <Action ID="NAVIGATE_TO" obj="table" />
      </Sequence>
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
