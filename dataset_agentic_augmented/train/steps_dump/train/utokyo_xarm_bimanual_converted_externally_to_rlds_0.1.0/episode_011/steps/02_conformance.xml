<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to wrinkled_towel -->
      <Action ID="NAVIGATE_TO" obj="wrinkled_towel" />
      <!-- Grasp wrinkled_towel -->
      <Action ID="GRASP" obj="wrinkled_towel" />
      <!-- Unfold wrinkled_towel -->
      <Action ID="UNFOLD" obj="wrinkled_towel" />
      <!-- Navigate to green_mat -->
      <Action ID="NAVIGATE_TO" obj="green_mat" />
      <!-- Retry PLACE_ON_TOP green_mat up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Place on green_mat -->
        <Action ID="PLACE_ON_TOP" obj="green_mat" />
      </RetryUntilSuccessful>
      
    </Sequence>
  </BehaviorTree>
</root>
