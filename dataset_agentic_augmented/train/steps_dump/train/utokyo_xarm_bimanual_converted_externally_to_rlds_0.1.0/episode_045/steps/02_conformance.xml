<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to towel -->
      <Action ID="NAVIGATE_TO" obj="towel" />
      <!-- Fallback: if GRASP towel fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp towel -->
        <Action ID="GRASP" obj="towel" />
        <Sequence>
          <!-- Push towel forward toward front edge of table -->
          <Action ID="PUSH" obj="towel" />
          <!-- Grasp towel -->
          <Action ID="GRASP" obj="towel" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
