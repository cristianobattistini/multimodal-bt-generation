<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to oven -->
      <Action ID="NAVIGATE_TO" obj="oven" />
      <!-- Grasp oven -->
      <Action ID="GRASP" obj="oven" />
      <!-- Retry OPEN oven up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Open oven -->
        <Action ID="OPEN" obj="oven" />
      </RetryUntilSuccessful>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
