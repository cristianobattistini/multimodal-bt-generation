<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to corn -->
      <Action ID="NAVIGATE_TO" obj="corn" />
      <!-- Check corn is reachable before GRASP -->
      <Condition ID="IS_REACHABLE" obj="corn" />
      <!-- Retry GRASP corn up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Timeout: GRASP corn within 15s -->
        <Timeout msec="15000">
          <!-- Grasp corn -->
          <Action ID="GRASP" obj="corn" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Navigate to pan_on_stove -->
      <Action ID="NAVIGATE_TO" obj="pan_on_stove" />
      <!-- Place inside pan_on_stove -->
      <Action ID="PLACE_INSIDE" obj="pan_on_stove" />
    </Sequence>
  </BehaviorTree>
</root>
