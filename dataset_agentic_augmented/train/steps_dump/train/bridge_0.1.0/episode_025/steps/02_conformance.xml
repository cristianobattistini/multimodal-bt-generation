<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to fridge -->
      <Action ID="NAVIGATE_TO" obj="fridge" />
      <!-- Fallback: if GRASP fridge fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP fridge up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Grasp fridge -->
          <Action ID="GRASP" obj="fridge" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push fridge forward toward front edge of table -->
          <Action ID="PUSH" obj="fridge" />
          <!-- Grasp fridge -->
          <Action ID="GRASP" obj="fridge" />
        </Sequence>
      </Fallback>
      <!-- Open fridge -->
      <Action ID="OPEN" obj="fridge" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
