<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to bell_pepper -->
      <Action ID="NAVIGATE_TO" obj="bell_pepper" />
      <!-- Grasp bell_pepper -->
      <Action ID="GRASP" obj="bell_pepper" />
      <Sequence>
        <!-- Check table is reachable before NAVIGATE_TO -->
        <Condition ID="IS_REACHABLE" obj="table" />
        <!-- Navigate to table -->
        <Action ID="NAVIGATE_TO" obj="table" />
      </Sequence>
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
