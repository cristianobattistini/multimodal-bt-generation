<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to red_pepper -->
      <Action ID="NAVIGATE_TO" obj="red_pepper" />
      <!-- Grasp red_pepper -->
      <Action ID="GRASP" obj="red_pepper" />
      <!-- Check table is reachable before NAVIGATE_TO -->
      <Condition ID="IS_REACHABLE" obj="table" />
      <!-- Timeout: NAVIGATE_TO table within 10s -->
      <Timeout msec="10000">
        <!-- Navigate to table -->
        <Action ID="NAVIGATE_TO" obj="table" />
      </Timeout>
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
