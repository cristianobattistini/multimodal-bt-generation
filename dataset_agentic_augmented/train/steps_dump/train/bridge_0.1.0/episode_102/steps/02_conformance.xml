<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to basin -->
      <Action ID="NAVIGATE_TO" obj="basin" />
      <Sequence>
        <!-- Check cup is visible before NAVIGATE_TO -->
        <Condition ID="IS_VISIBLE" obj="cup" />
        <!-- Navigate to cup -->
        <Action ID="NAVIGATE_TO" obj="cup" />
      </Sequence>
      <!-- Grasp cup -->
      <Action ID="GRASP" obj="cup" />
      <!-- Return cup upright (flip) -->
      <Action ID="FLIP" obj="cup" />
      <!-- Place inside basin -->
      <Action ID="PLACE_INSIDE" obj="basin" />
    </Sequence>
  </BehaviorTree>
</root>
