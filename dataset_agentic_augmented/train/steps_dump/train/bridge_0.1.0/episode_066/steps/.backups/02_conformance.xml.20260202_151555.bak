<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Retry GRASP pot up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Timeout: GRASP pot within 10s -->
        <Timeout msec="10000">
          <!-- Grasp pot -->
          <Action ID="GRASP" obj="pot" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Navigate to yellow_cloth -->
      <Action ID="NAVIGATE_TO" obj="yellow_cloth" />
      <!-- Place on yellow_cloth -->
      <Action ID="PLACE_ON_TOP" obj="yellow_cloth" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
