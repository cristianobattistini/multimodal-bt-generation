<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to steel_pan -->
      <Action ID="NAVIGATE_TO" obj="steel_pan" />
      <Sequence>
        <!-- Check yellow_capsicum is visible before GRASP -->
        <Condition ID="IS_VISIBLE" obj="yellow_capsicum" />
        <!-- Grasp yellow_capsicum -->
        <Action ID="GRASP" obj="yellow_capsicum" />
      </Sequence>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
