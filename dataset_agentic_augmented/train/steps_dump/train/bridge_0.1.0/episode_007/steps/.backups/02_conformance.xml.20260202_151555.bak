<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to silver_pot -->
      <Action ID="NAVIGATE_TO" obj="silver_pot" />
      <!-- Grasp silver_pot -->
      <Action ID="GRASP" obj="silver_pot" />
      <Sequence>
        <!-- Check yellow_napkin is visible before NAVIGATE_TO -->
        <Condition ID="IS_VISIBLE" obj="yellow_napkin" />
        <!-- Navigate to yellow_napkin -->
        <Action ID="NAVIGATE_TO" obj="yellow_napkin" />
      </Sequence>
      <!-- Place on yellow_napkin -->
      <Action ID="PLACE_ON_TOP" obj="yellow_napkin" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
