<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to yellow_flower -->
      <Action ID="NAVIGATE_TO" obj="yellow_flower" />
      <!-- Fallback: if GRASP yellow_flower fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP yellow_flower up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Timeout: GRASP yellow_flower within 10s -->
          <Timeout msec="10000">
            <!-- Grasp yellow_flower -->
            <Action ID="GRASP" obj="yellow_flower" />
          </Timeout>
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push yellow_flower forward toward front edge of table -->
          <Action ID="PUSH" obj="yellow_flower" />
          <!-- Grasp yellow_flower -->
          <Action ID="GRASP" obj="yellow_flower" />
        </Sequence>
      </Fallback>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Place on countertop -->
      <Action ID="PLACE_ON_TOP" obj="countertop" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
