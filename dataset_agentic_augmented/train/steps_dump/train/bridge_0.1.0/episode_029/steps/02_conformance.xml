<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Execute subtree ApproachMushroom -->
      <SubTree ID="ApproachMushroom" />
      <!-- Navigate to metal_pot -->
      <Action ID="NAVIGATE_TO" obj="metal_pot" />
      <!-- Place inside metal_pot -->
      <Action ID="PLACE_INSIDE" obj="metal_pot" />
    </Sequence>
  </BehaviorTree>
  <!-- Subtree definition ApproachMushroom -->
  <BehaviorTree ID="ApproachMushroom">
    <Sequence>
      <!-- Navigate to mushroom -->
      <Action ID="NAVIGATE_TO" obj="mushroom" />
      <!-- Retry GRASP mushroom up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Grasp mushroom -->
        <Action ID="GRASP" obj="mushroom" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
