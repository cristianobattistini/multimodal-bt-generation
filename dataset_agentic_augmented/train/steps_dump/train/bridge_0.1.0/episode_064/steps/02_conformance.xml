<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to red_fork -->
      <Action ID="NAVIGATE_TO" obj="red_fork" />
      <!-- Retry GRASP red_fork up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Grasp red_fork -->
        <Action ID="GRASP" obj="red_fork" />
      </RetryUntilSuccessful>
      <!-- Navigate to stovetop -->
      <Action ID="NAVIGATE_TO" obj="stovetop" />
      <!-- Place on stovetop -->
      <Action ID="PLACE_ON_TOP" obj="stovetop" />
    </Sequence>
  </BehaviorTree>
</root>
