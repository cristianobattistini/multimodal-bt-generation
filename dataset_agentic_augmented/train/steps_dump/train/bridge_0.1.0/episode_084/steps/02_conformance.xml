<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Grasp pot -->
      <Action ID="GRASP" obj="pot" />
      <!-- Return pot upright (flip) -->
      <Action ID="FLIP" obj="pot" />
      <!-- Check sink is visible before NAVIGATE_TO -->
      <Condition ID="IS_VISIBLE" obj="sink" />
      <!-- Timeout: NAVIGATE_TO sink within 15s -->
      <Timeout msec="15000">
        <!-- Navigate to sink -->
        <Action ID="NAVIGATE_TO" obj="sink" />
      </Timeout>
      <!-- Place inside sink -->
      <Action ID="PLACE_INSIDE" obj="sink" />
    </Sequence>
  </BehaviorTree>
</root>
