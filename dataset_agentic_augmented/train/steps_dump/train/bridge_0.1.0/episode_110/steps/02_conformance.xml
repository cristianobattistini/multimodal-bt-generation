<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to eggplant -->
      <Action ID="NAVIGATE_TO" obj="eggplant" />
      <!-- Grasp eggplant -->
      <Action ID="GRASP" obj="eggplant" />
      <!-- Navigate to yellow_cloth -->
      <Action ID="NAVIGATE_TO" obj="yellow_cloth" />
      <!-- Check yellow_cloth is holding before PLACE_ON_TOP -->
      <Condition ID="IS_HOLDING" obj="yellow_cloth" />
      <!-- Retry PLACE_ON_TOP yellow_cloth up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Place on yellow_cloth -->
        <Action ID="PLACE_ON_TOP" obj="yellow_cloth" />
      </RetryUntilSuccessful>
      
    </Sequence>
  </BehaviorTree>
</root>
