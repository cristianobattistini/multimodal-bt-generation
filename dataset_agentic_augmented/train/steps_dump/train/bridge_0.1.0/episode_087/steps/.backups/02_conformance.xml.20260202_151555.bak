<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Grasp pot -->
      <Action ID="GRASP" obj="pot" />
      <!-- Return pot upright (flip) -->
      <Action ID="FLIP" obj="pot" />
      <!-- Timeout: NAVIGATE_TO sink within 20s -->
      <Timeout msec="20000">
        <!-- Navigate to sink -->
        <Action ID="NAVIGATE_TO" obj="sink" />
      </Timeout>
      <!-- Place inside sink -->
      <Action ID="PLACE_INSIDE" obj="sink" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
