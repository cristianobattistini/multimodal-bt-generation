<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to shaker -->
      <Action ID="NAVIGATE_TO" obj="shaker" />
      <!-- Retry GRASP shaker up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Timeout: GRASP shaker within 20s -->
        <Timeout msec="20000">
          <!-- Grasp shaker -->
          <Action ID="GRASP" obj="shaker" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Place inside pot -->
      <Action ID="PLACE_INSIDE" obj="pot" />
    </Sequence>
  </BehaviorTree>
</root>
