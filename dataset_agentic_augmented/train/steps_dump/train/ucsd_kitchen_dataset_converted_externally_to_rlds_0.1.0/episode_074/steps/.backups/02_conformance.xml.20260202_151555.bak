<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to teapot -->
      <Action ID="NAVIGATE_TO" obj="teapot" />
      <!-- Grasp teapot -->
      <Action ID="GRASP" obj="teapot" />
      <Sequence>
        <!-- Check stove is reachable before NAVIGATE_TO -->
        <Condition ID="IS_REACHABLE" obj="stove" />
        <!-- Navigate to stove -->
        <Action ID="NAVIGATE_TO" obj="stove" />
      </Sequence>
      <!-- Place on stove -->
      <Action ID="PLACE_ON_TOP" obj="stove" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
