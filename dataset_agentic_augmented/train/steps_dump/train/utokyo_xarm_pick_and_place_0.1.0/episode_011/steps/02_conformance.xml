<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to white_plate -->
      <Action ID="NAVIGATE_TO" obj="white_plate" />
      <!-- Grasp white_plate -->
      <Action ID="GRASP" obj="white_plate" />
      <!-- Navigate to red_plate -->
      <Action ID="NAVIGATE_TO" obj="red_plate" />
      <!-- Fallback: if PLACE_ON_TOP red_plate fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry PLACE_ON_TOP red_plate up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Place on red_plate -->
          <Action ID="PLACE_ON_TOP" obj="red_plate" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push red_plate forward toward front edge of table -->
          <Action ID="PUSH" obj="red_plate" />
          <!-- Place on red_plate -->
          <Action ID="PLACE_ON_TOP" obj="red_plate" />
        </Sequence>
      </Fallback>
      
    </Sequence>
  </BehaviorTree>
</root>
