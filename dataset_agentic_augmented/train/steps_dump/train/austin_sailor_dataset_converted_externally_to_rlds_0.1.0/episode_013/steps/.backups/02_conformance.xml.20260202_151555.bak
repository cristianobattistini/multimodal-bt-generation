<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to bread -->
      <Action ID="NAVIGATE_TO" obj="bread" />
      <!-- Grasp bread -->
      <Action ID="GRASP" obj="bread" />
      <!-- Navigate to serving_area -->
      <Action ID="NAVIGATE_TO" obj="serving_area" />
      <!-- Place on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="serving_area" />
      <!-- Release -->
      <Action ID="RELEASE" />
      <!-- Navigate to butter -->
      <Action ID="NAVIGATE_TO" obj="butter" />
      <Sequence>
        <!-- Check butter is visible before GRASP -->
        <Condition ID="IS_VISIBLE" obj="butter" />
        <!-- Retry GRASP butter up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Timeout: GRASP butter within 10s -->
          <Timeout msec="10000">
            <!-- Grasp butter -->
            <Action ID="GRASP" obj="butter" />
          </Timeout>
        </RetryUntilSuccessful>
      </Sequence>
      <!-- Navigate to serving_area -->
      <Action ID="NAVIGATE_TO" obj="serving_area" />
      <!-- Place on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="serving_area" />
      <!-- Release -->
      <Action ID="RELEASE" />
      <!-- Navigate to milk -->
      <Action ID="NAVIGATE_TO" obj="milk" />
      <!-- Grasp milk -->
      <Action ID="GRASP" obj="milk" />
      <!-- Navigate to serving_area -->
      <Action ID="NAVIGATE_TO" obj="serving_area" />
      <!-- Place on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="serving_area" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
