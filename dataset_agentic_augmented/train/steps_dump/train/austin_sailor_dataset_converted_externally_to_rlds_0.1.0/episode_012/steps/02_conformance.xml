<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to fish -->
      <Action ID="NAVIGATE_TO" obj="fish" />
      <!-- Grasp fish -->
      <Action ID="GRASP" obj="fish" />
      <!-- Navigate to frying_pan -->
      <Action ID="NAVIGATE_TO" obj="frying_pan" />
      <!-- Place inside frying_pan -->
      <Action ID="PLACE_INSIDE" obj="frying_pan" />
      <!-- Navigate to sausage -->
      <Action ID="NAVIGATE_TO" obj="sausage" />
      <!-- Check sausage is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="sausage" />
      <!-- Fallback: if GRASP sausage fails, try alternative to reposition -->
      <Fallback>
        <!-- Timeout: GRASP sausage within 15s -->
        <Timeout msec="15000">
          <!-- Grasp sausage -->
          <Action ID="GRASP" obj="sausage" />
        </Timeout>
        <Sequence>
          <!-- Push sausage forward toward front edge of table -->
          <Action ID="PUSH" obj="sausage" />
          <!-- Grasp sausage -->
          <Action ID="GRASP" obj="sausage" />
        </Sequence>
      </Fallback>
      <!-- Navigate to frying_pan -->
      <Action ID="NAVIGATE_TO" obj="frying_pan" />
      <!-- Place inside frying_pan -->
      <Action ID="PLACE_INSIDE" obj="frying_pan" />
      <!-- Navigate to tomato -->
      <Action ID="NAVIGATE_TO" obj="tomato" />
      <!-- Grasp tomato -->
      <Action ID="GRASP" obj="tomato" />
      <!-- Navigate to frying_pan -->
      <Action ID="NAVIGATE_TO" obj="frying_pan" />
      <!-- Place inside frying_pan -->
      <Action ID="PLACE_INSIDE" obj="frying_pan" />
    </Sequence>
  </BehaviorTree>
</root>
