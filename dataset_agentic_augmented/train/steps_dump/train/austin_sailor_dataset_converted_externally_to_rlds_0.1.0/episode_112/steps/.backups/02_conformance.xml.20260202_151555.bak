<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to bread -->
      <Action ID="NAVIGATE_TO" obj="bread" />
      <!-- Grasp bread -->
      <Action ID="GRASP" obj="bread" />
      <!-- Navigate to serving_area -->
      <Action ID="NAVIGATE_TO" obj="serving_area" />
      <Sequence>
        <!-- Check serving_area is holding before PLACE_ON_TOP -->
        <Condition ID="IS_HOLDING" obj="serving_area" />
        <!-- Place on serving_area -->
        <Action ID="PLACE_ON_TOP" obj="serving_area" />
      </Sequence>
      <!-- Release -->
      <Action ID="RELEASE" />
      <!-- Navigate to butter -->
      <Action ID="NAVIGATE_TO" obj="butter" />
      <!-- Grasp butter -->
      <Action ID="GRASP" obj="butter" />
      <!-- Navigate to serving_area -->
      <Action ID="NAVIGATE_TO" obj="serving_area" />
      <Sequence>
        <!-- Check serving_area is holding before PLACE_ON_TOP -->
        <Condition ID="IS_HOLDING" obj="serving_area" />
        <!-- Place on serving_area -->
        <Action ID="PLACE_ON_TOP" obj="serving_area" />
      </Sequence>
      <!-- Release -->
      <Action ID="RELEASE" />
      <!-- Navigate to milk -->
      <Action ID="NAVIGATE_TO" obj="milk" />
      <!-- Grasp milk -->
      <Action ID="GRASP" obj="milk" />
      <!-- Navigate to serving_area -->
      <Action ID="NAVIGATE_TO" obj="serving_area" />
      <Sequence>
        <!-- Check serving_area is holding before PLACE_ON_TOP -->
        <Condition ID="IS_HOLDING" obj="serving_area" />
        <!-- Place on serving_area -->
        <Action ID="PLACE_ON_TOP" obj="serving_area" />
      </Sequence>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
