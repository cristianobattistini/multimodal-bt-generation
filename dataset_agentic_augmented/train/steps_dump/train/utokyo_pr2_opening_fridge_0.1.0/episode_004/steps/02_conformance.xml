<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to fridge_door -->
      <Action ID="NAVIGATE_TO" obj="fridge_door" />
      <!-- Check fridge_door is graspable before GRASP -->
      <Condition ID="IS_GRASPABLE" obj="fridge_door" />
      <!-- Fallback: if GRASP fridge_door fails, try alternative to reposition -->
      <Fallback>
        <!-- Grasp fridge_door -->
        <Action ID="GRASP" obj="fridge_door" />
        <Sequence>
          <!-- Push fridge_door forward toward front edge of table -->
          <Action ID="PUSH" obj="fridge_door" />
          <!-- Grasp fridge_door -->
          <Action ID="GRASP" obj="fridge_door" />
        </Sequence>
      </Fallback>
      <!-- Open fridge_door -->
      <Action ID="OPEN" obj="fridge_door" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
