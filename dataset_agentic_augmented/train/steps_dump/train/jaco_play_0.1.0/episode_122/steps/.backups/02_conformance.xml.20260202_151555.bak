<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to apple_fruit -->
      <Action ID="NAVIGATE_TO" obj="apple_fruit" />
      <!-- Grasp apple_fruit -->
      <Action ID="GRASP" obj="apple_fruit" />
      <!-- Navigate to gray_plate -->
      <Action ID="NAVIGATE_TO" obj="gray_plate" />
      <!-- Retry PLACE_INSIDE gray_plate up to 4 attempts -->
      <RetryUntilSuccessful num_attempts="4">
        <!-- Place inside gray_plate -->
        <Action ID="PLACE_INSIDE" obj="gray_plate" />
      </RetryUntilSuccessful>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
