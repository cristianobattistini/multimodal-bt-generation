<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Check burger_meat is visible before NAVIGATE_TO -->
      <Condition ID="IS_VISIBLE" obj="burger_meat" />
      <!-- Timeout: NAVIGATE_TO burger_meat within 20s -->
      <Timeout msec="20000">
        <!-- Navigate to burger_meat -->
        <Action ID="NAVIGATE_TO" obj="burger_meat" />
      </Timeout>
      <!-- Grasp burger_meat -->
      <Action ID="GRASP" obj="burger_meat" />
      <!-- Navigate to oven -->
      <Action ID="NAVIGATE_TO" obj="oven" />
      <!-- Place inside oven -->
      <Action ID="PLACE_INSIDE" obj="oven" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
