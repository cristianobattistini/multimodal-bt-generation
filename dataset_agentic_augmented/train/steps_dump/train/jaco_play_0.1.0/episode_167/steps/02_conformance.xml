<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to butter_dairy -->
      <Action ID="NAVIGATE_TO" obj="butter_dairy" />
      <!-- Grasp butter_dairy -->
      <Action ID="GRASP" obj="butter_dairy" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <Sequence>
        <!-- Check table is holding before PLACE_ON_TOP -->
        <Condition ID="IS_HOLDING" obj="table" />
        <!-- Place on table -->
        <Action ID="PLACE_ON_TOP" obj="table" />
      </Sequence>
      
    </Sequence>
  </BehaviorTree>
</root>
