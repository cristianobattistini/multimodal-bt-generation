<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to steak_meat -->
      <Action ID="NAVIGATE_TO" obj="steak_meat" />
      <!-- Grasp steak_meat -->
      <Action ID="GRASP" obj="steak_meat" />
      <!-- Navigate to white_plate -->
      <Action ID="NAVIGATE_TO" obj="white_plate" />
      <!-- Fallback: if PLACE_INSIDE white_plate fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry PLACE_INSIDE white_plate up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Place inside white_plate -->
          <Action ID="PLACE_INSIDE" obj="white_plate" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push white_plate forward toward front edge of table -->
          <Action ID="PUSH" obj="white_plate" />
          <!-- Place inside white_plate -->
          <Action ID="PLACE_INSIDE" obj="white_plate" />
        </Sequence>
      </Fallback>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
