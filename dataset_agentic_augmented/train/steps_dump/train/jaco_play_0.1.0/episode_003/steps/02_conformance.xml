<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to metal_platform -->
      <Action ID="NAVIGATE_TO" obj="metal_platform" />
      <!-- Navigate to gray_bowl -->
      <Action ID="NAVIGATE_TO" obj="gray_bowl" />
      <!-- Retry GRASP gray_bowl up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Grasp gray_bowl -->
        <Action ID="GRASP" obj="gray_bowl" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
