<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <Sequence>
        <!-- Check orange_fruit is reachable before NAVIGATE_TO -->
        <Condition ID="IS_REACHABLE" obj="orange_fruit" />
        <!-- Navigate to orange_fruit -->
        <Action ID="NAVIGATE_TO" obj="orange_fruit" />
      </Sequence>
      <!-- Grasp orange_fruit -->
      <Action ID="GRASP" obj="orange_fruit" />
      <!-- Navigate to sink -->
      <Action ID="NAVIGATE_TO" obj="sink" />
      <!-- Place inside sink -->
      <Action ID="PLACE_INSIDE" obj="sink" />
    </Sequence>
  </BehaviorTree>
</root>
