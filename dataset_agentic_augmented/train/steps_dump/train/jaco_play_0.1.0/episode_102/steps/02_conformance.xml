<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to orange_fruit -->
      <Action ID="NAVIGATE_TO" obj="orange_fruit" />
      <!-- Grasp orange_fruit -->
      <Action ID="GRASP" obj="orange_fruit" />
      <!-- Navigate to sink -->
      <Action ID="NAVIGATE_TO" obj="sink" />
      <!-- Fallback: if PLACE_INSIDE sink fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place inside sink -->
        <Action ID="PLACE_INSIDE" obj="sink" />
        <Sequence>
          <!-- Push sink forward toward front edge of table -->
          <Action ID="PUSH" obj="sink" />
          <!-- Place inside sink -->
          <Action ID="PLACE_INSIDE" obj="sink" />
        </Sequence>
      </Fallback>
      
    </Sequence>
  </BehaviorTree>
</root>
