<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to yellow_cup -->
      <Action ID="NAVIGATE_TO" obj="yellow_cup" />
      <!-- Retry GRASP yellow_cup up to 4 attempts -->
      <RetryUntilSuccessful num_attempts="4">
        <!-- Grasp yellow_cup -->
        <Action ID="GRASP" obj="yellow_cup" />
      </RetryUntilSuccessful>
      <!-- Navigate to white_plate -->
      <Action ID="NAVIGATE_TO" obj="white_plate" />
      <!-- Place inside white_plate -->
      <Action ID="PLACE_INSIDE" obj="white_plate" />
    </Sequence>
  </BehaviorTree>
</root>
