<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to gray_plate -->
      <Action ID="NAVIGATE_TO" obj="gray_plate" />
      <!-- Navigate to orange_fruit -->
      <Action ID="NAVIGATE_TO" obj="orange_fruit" />
      <!-- Check orange_fruit is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="orange_fruit" />
      <!-- Fallback: if GRASP orange_fruit fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP orange_fruit up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Grasp orange_fruit -->
          <Action ID="GRASP" obj="orange_fruit" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push orange_fruit forward toward front edge of table -->
          <Action ID="PUSH" obj="orange_fruit" />
          <!-- Grasp orange_fruit -->
          <Action ID="GRASP" obj="orange_fruit" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
