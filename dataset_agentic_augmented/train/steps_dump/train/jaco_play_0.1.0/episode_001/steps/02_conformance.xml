<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to gray_bowl -->
      <Action ID="NAVIGATE_TO" obj="gray_bowl" />
      <!-- Fallback: if GRASP gray_bowl fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP gray_bowl up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Timeout: GRASP gray_bowl within 10s -->
          <Timeout msec="10000">
            <!-- Grasp gray_bowl -->
            <Action ID="GRASP" obj="gray_bowl" />
          </Timeout>
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push gray_bowl forward toward front edge of table -->
          <Action ID="PUSH" obj="gray_bowl" />
          <!-- Grasp gray_bowl -->
          <Action ID="GRASP" obj="gray_bowl" />
        </Sequence>
      </Fallback>
      <!-- Navigate to dish_rack -->
      <Action ID="NAVIGATE_TO" obj="dish_rack" />
      <!-- Place inside dish_rack -->
      <Action ID="PLACE_INSIDE" obj="dish_rack" />
    </Sequence>
  </BehaviorTree>
</root>
