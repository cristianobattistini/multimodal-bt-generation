<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to long_bread -->
      <Action ID="NAVIGATE_TO" obj="long_bread" />
      <!-- Retry GRASP long_bread up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Timeout: GRASP long_bread within 15s -->
        <Timeout msec="15000">
          <!-- Grasp long_bread -->
          <Action ID="GRASP" obj="long_bread" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Navigate to sink -->
      <Action ID="NAVIGATE_TO" obj="sink" />
      <!-- Place inside sink -->
      <Action ID="PLACE_INSIDE" obj="sink" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
