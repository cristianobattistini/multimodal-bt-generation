<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to yellow_cup -->
      <Action ID="NAVIGATE_TO" obj="yellow_cup" />
      <!-- Grasp yellow_cup -->
      <Action ID="GRASP" obj="yellow_cup" />
      <!-- Navigate to oven -->
      <Action ID="NAVIGATE_TO" obj="oven" />
      <!-- Open oven -->
      <Action ID="OPEN" obj="oven" />
      <!-- Retry PLACE_INSIDE oven up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Place inside oven -->
        <Action ID="PLACE_INSIDE" obj="oven" />
      </RetryUntilSuccessful>
      
    </Sequence>
  </BehaviorTree>
</root>
