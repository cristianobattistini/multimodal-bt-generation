<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to burger_meat -->
      <Action ID="NAVIGATE_TO" obj="burger_meat" />
      <!-- Retry GRASP burger_meat up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Timeout: GRASP burger_meat within 20s -->
        <Timeout msec="20000">
          <!-- Grasp burger_meat -->
          <Action ID="GRASP" obj="burger_meat" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Navigate to sink -->
      <Action ID="NAVIGATE_TO" obj="sink" />
      <!-- Place inside sink -->
      <Action ID="PLACE_INSIDE" obj="sink" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
