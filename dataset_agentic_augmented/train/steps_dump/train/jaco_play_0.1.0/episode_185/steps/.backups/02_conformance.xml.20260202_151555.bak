<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to gray_bowl -->
      <Action ID="NAVIGATE_TO" obj="gray_bowl" />
      <!-- Check gray_bowl is graspable before GRASP -->
      <Condition ID="IS_GRASPABLE" obj="gray_bowl" />
      <!-- Fallback: if GRASP gray_bowl fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP gray_bowl up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Grasp gray_bowl -->
          <Action ID="GRASP" obj="gray_bowl" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push gray_bowl forward toward front edge of table -->
          <Action ID="PUSH" obj="gray_bowl" />
          <!-- Grasp gray_bowl -->
          <Action ID="GRASP" obj="gray_bowl" />
        </Sequence>
      </Fallback>
      <!-- Navigate to white_plate -->
      <Action ID="NAVIGATE_TO" obj="white_plate" />
      <!-- Place inside white_plate -->
      <Action ID="PLACE_INSIDE" obj="white_plate" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
