<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to black_bowl -->
      <Action ID="NAVIGATE_TO" obj="black_bowl" />
      <!-- Check black_bowl is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="black_bowl" />
      <!-- Retry GRASP black_bowl up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Timeout: GRASP black_bowl within 10s -->
        <Timeout msec="10000">
          <!-- Grasp black_bowl -->
          <Action ID="GRASP" obj="black_bowl" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Navigate to dish_rack -->
      <Action ID="NAVIGATE_TO" obj="dish_rack" />
      <!-- Place inside dish_rack -->
      <Action ID="PLACE_INSIDE" obj="dish_rack" />
    </Sequence>
  </BehaviorTree>
</root>
