<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to blue_tray -->
      <Action ID="NAVIGATE_TO" obj="blue_tray" />
      <!-- Navigate to yellow_cup -->
      <Action ID="NAVIGATE_TO" obj="yellow_cup" />
      <!-- Check yellow_cup is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="yellow_cup" />
      <!-- Fallback: if GRASP yellow_cup fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP yellow_cup up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Grasp yellow_cup -->
          <Action ID="GRASP" obj="yellow_cup" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push yellow_cup forward toward front edge of table -->
          <Action ID="PUSH" obj="yellow_cup" />
          <!-- Grasp yellow_cup -->
          <Action ID="GRASP" obj="yellow_cup" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
