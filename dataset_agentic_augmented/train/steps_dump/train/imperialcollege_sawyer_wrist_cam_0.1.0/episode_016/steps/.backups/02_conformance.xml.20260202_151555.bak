<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Check apple is visible before NAVIGATE_TO -->
      <Condition ID="IS_VISIBLE" obj="apple" />
      <!-- Timeout: NAVIGATE_TO apple within 20s -->
      <Timeout msec="20000">
        <!-- Navigate to apple -->
        <Action ID="NAVIGATE_TO" obj="apple" />
      </Timeout>
      <!-- Grasp apple -->
      <Action ID="GRASP" obj="apple" />
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Place inside pot -->
      <Action ID="PLACE_INSIDE" obj="pot" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
