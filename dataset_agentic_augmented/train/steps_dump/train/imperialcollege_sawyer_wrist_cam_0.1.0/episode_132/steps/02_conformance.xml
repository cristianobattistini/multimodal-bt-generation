<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to cup -->
      <Action ID="NAVIGATE_TO" obj="cup" />
      <!-- Grasp cup -->
      <Action ID="GRASP" obj="cup" />
      <!-- Timeout: NAVIGATE_TO hook within 10s -->
      <Timeout msec="10000">
        <!-- Navigate to hook -->
        <Action ID="NAVIGATE_TO" obj="hook" />
      </Timeout>
      <!-- Hang bag on hook -->
      <Action ID="HANG" obj="hook" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
