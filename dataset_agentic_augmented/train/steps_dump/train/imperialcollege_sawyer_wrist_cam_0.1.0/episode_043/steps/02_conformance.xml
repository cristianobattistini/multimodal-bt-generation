<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Execute subtree ApproachPitcher -->
      <SubTree ID="ApproachPitcher" />
      <!-- Navigate to mug -->
      <Action ID="NAVIGATE_TO" obj="mug" />
      <!-- Pour into mug -->
      <Action ID="POUR" obj="mug" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
  <!-- Subtree definition ApproachPitcher -->
  <BehaviorTree ID="ApproachPitcher">
    <Sequence>
      <!-- Navigate to pitcher -->
      <Action ID="NAVIGATE_TO" obj="pitcher" />
      <!-- Grasp pitcher -->
      <Action ID="GRASP" obj="pitcher" />
    </Sequence>
  </BehaviorTree>
</root>
