<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to red_pitcher -->
      <Action ID="NAVIGATE_TO" obj="red_pitcher" />
      <!-- Grasp red_pitcher -->
      <Action ID="GRASP" obj="red_pitcher" />
      <!-- Navigate to white_mug -->
      <Action ID="NAVIGATE_TO" obj="white_mug" />
      <!-- Pour into white_mug -->
      <Action ID="POUR" obj="white_mug" />
      <!-- Check blue_cloth is visible before NAVIGATE_TO -->
      <Condition ID="IS_VISIBLE" obj="blue_cloth" />
      <!-- Timeout: NAVIGATE_TO blue_cloth within 10s -->
      <Timeout msec="10000">
        <!-- Navigate to blue_cloth -->
        <Action ID="NAVIGATE_TO" obj="blue_cloth" />
      </Timeout>
      <!-- Place on blue_cloth -->
      <Action ID="PLACE_ON_TOP" obj="blue_cloth" />
    </Sequence>
  </BehaviorTree>
</root>
