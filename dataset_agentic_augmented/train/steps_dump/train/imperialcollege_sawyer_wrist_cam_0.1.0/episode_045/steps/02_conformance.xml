<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to kettle -->
      <Action ID="NAVIGATE_TO" obj="kettle" />
      <!-- Fallback: if GRASP kettle fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp kettle -->
        <Action ID="GRASP" obj="kettle" />
        <Sequence>
          <!-- Push kettle forward toward front edge of table -->
          <Action ID="PUSH" obj="kettle" />
          <!-- Grasp kettle -->
          <Action ID="GRASP" obj="kettle" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
