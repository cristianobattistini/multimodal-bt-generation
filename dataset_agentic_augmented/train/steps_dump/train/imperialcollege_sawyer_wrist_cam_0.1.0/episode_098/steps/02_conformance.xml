<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to white_bowl -->
      <Action ID="NAVIGATE_TO" obj="white_bowl" />
      <!-- Fallback: if GRASP white_bowl fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp white_bowl -->
        <Action ID="GRASP" obj="white_bowl" />
        <Sequence>
          <!-- Push white_bowl forward toward front edge of table -->
          <Action ID="PUSH" obj="white_bowl" />
          <!-- Grasp white_bowl -->
          <Action ID="GRASP" obj="white_bowl" />
        </Sequence>
      </Fallback>
      <!-- Navigate to blue_bowl -->
      <Action ID="NAVIGATE_TO" obj="blue_bowl" />
      <!-- Place inside blue_bowl -->
      <Action ID="PLACE_INSIDE" obj="blue_bowl" />
    </Sequence>
  </BehaviorTree>
</root>
