<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to fruit_bowl -->
      <Action ID="NAVIGATE_TO" obj="fruit_bowl" />
      <!-- Check orange is reachable before NAVIGATE_TO -->
      <Condition ID="IS_REACHABLE" obj="orange" />
      <!-- Timeout: NAVIGATE_TO orange within 10s -->
      <Timeout msec="10000">
        <!-- Navigate to orange -->
        <Action ID="NAVIGATE_TO" obj="orange" />
      </Timeout>
      <!-- Grasp orange -->
      <Action ID="GRASP" obj="orange" />
    </Sequence>
  </BehaviorTree>
</root>
