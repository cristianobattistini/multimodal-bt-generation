<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to white_carton -->
      <Action ID="NAVIGATE_TO" obj="white_carton" />
      <!-- Retry GRASP white_carton up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Timeout: GRASP white_carton within 20s -->
        <Timeout msec="20000">
          <!-- Grasp white_carton -->
          <Action ID="GRASP" obj="white_carton" />
        </Timeout>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
