<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to red_cube -->
      <Action ID="NAVIGATE_TO" obj="red_cube" />
      <!-- Check red_cube is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="red_cube" />
      <!-- Retry GRASP red_cube up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Grasp red_cube -->
        <Action ID="GRASP" obj="red_cube" />
      </RetryUntilSuccessful>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
