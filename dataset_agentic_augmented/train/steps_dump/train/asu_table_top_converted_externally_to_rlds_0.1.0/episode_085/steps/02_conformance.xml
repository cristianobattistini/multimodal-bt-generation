<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to yellow_object -->
      <Action ID="NAVIGATE_TO" obj="yellow_object" />
      <!-- Check yellow_object is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="yellow_object" />
      <!-- Fallback: if GRASP yellow_object fails, try alternative to reposition -->
      <Fallback>
        <!-- Grasp yellow_object -->
        <Action ID="GRASP" obj="yellow_object" />
        <Sequence>
          <!-- Push yellow_object forward toward front edge of table -->
          <Action ID="PUSH" obj="yellow_object" />
          <!-- Grasp yellow_object -->
          <Action ID="GRASP" obj="yellow_object" />
        </Sequence>
      </Fallback>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
