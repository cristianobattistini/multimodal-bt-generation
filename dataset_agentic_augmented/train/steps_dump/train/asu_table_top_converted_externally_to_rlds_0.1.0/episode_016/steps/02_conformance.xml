<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to green_glass_bottle -->
      <Action ID="NAVIGATE_TO" obj="green_glass_bottle" />
      <!-- Fallback: if GRASP green_glass_bottle fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP green_glass_bottle up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Timeout: GRASP green_glass_bottle within 15s -->
          <Timeout msec="15000">
            <!-- Grasp green_glass_bottle -->
            <Action ID="GRASP" obj="green_glass_bottle" />
          </Timeout>
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push green_glass_bottle forward toward front edge of table -->
          <Action ID="PUSH" obj="green_glass_bottle" />
          <!-- Grasp green_glass_bottle -->
          <Action ID="GRASP" obj="green_glass_bottle" />
        </Sequence>
      </Fallback>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
