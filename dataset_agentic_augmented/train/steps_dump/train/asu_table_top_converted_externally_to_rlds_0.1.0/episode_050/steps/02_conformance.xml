<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to red_square -->
      <Action ID="NAVIGATE_TO" obj="red_square" />
      <!-- Check red_square is graspable before GRASP -->
      <Condition ID="IS_GRASPABLE" obj="red_square" />
      <!-- Retry GRASP red_square up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Grasp red_square -->
        <Action ID="GRASP" obj="red_square" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
