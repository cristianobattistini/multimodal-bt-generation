<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to maroon_square -->
      <Action ID="NAVIGATE_TO" obj="maroon_square" />
      <!-- Check maroon_square is reachable before GRASP -->
      <Condition ID="IS_REACHABLE" obj="maroon_square" />
      <!-- Fallback: if GRASP maroon_square fails, try alternative to reposition -->
      <Fallback>
        <!-- Grasp maroon_square -->
        <Action ID="GRASP" obj="maroon_square" />
        <Sequence>
          <!-- Push maroon_square forward toward front edge of table -->
          <Action ID="PUSH" obj="maroon_square" />
          <!-- Grasp maroon_square -->
          <Action ID="GRASP" obj="maroon_square" />
        </Sequence>
      </Fallback>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
