<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Open lid -->
      <Action ID="OPEN" obj="lid" />
      <!-- Navigate to lid -->
      <Action ID="NAVIGATE_TO" obj="lid" />
      <!-- Grasp lid -->
      <Action ID="GRASP" obj="lid" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place lid on table -->
      <Action ID="PLACE_ON_TOP" obj="lid" surface="table" />
      <!-- Approach pot -->
      <Action ID="APPROACH" obj="pot" />
      <!-- Grasp pot -->
      <Action ID="GRASP" obj="pot" />
      <!-- Navigate to plate -->
      <Action ID="NAVIGATE_TO" obj="plate" />
      <!-- Put on plate -->
      <Action ID="PUT_ON" obj="plate" />
      <!-- Navigate to tool -->
      <Action ID="NAVIGATE_TO" obj="tool" />
      <!-- Grasp tool -->
      <Action ID="GRASP" obj="tool" />
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Push pot -->
      <Action ID="PUSH" obj="pot" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
