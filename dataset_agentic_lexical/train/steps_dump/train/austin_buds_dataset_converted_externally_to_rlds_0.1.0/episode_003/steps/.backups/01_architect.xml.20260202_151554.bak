<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot"/>
      <!-- Open pot -->
      <Action ID="OPEN" obj="pot"/>
      <!-- Grasp pot -->
      <Action ID="GRASP" obj="pot"/>
      <!-- Navigate to plate -->
      <Action ID="NAVIGATE_TO" obj="plate"/>
      <!-- Place on plate -->
      <Action ID="PLACE_ON_TOP" obj="plate"/>
      <!-- Release -->
      <Action ID="RELEASE"/>
      <!-- Navigate to tool -->
      <Action ID="NAVIGATE_TO" obj="tool"/>
      <!-- Push pot to the front edge of the table using the tool (relation: front edge) -->
      <Action ID="PUSH" obj="pot"/>
    </Sequence>
  </BehaviorTree>
</root>