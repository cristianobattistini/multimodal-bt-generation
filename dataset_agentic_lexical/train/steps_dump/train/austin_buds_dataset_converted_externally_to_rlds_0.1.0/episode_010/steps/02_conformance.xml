<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Open lid -->
      <Action ID="OPEN" obj="lid" />
      <!-- Approach lid -->
      <Action ID="APPROACH" obj="lid" />
      <!-- Grasp lid -->
      <Action ID="GRASP" obj="lid" />
      <!-- Approach table -->
      <Action ID="APPROACH" obj="table" />
      <!-- Place lid on table -->
      <Action ID="PLACE_ON_TOP" obj="lid" surface="table" />
      <!-- Go to pot -->
      <Action ID="GO_TO" obj="pot" />
      <!-- Pick pot -->
      <Action ID="PICK" obj="pot" />
      <!-- Go to plate -->
      <Action ID="GO_TO" obj="plate" />
      <!-- Stack on plate -->
      <Action ID="STACK_ON" obj="plate" />
      <!-- Move to spatula -->
      <Action ID="MOVE_TO" obj="spatula" />
      <!-- Shove pot -->
      <Action ID="SHOVE" obj="pot" />
    </Sequence>
  </BehaviorTree>
</root>
