<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach pot -->
      <Action ID="APPROACH" obj="pot" />
      <!-- Grasp pot_lid -->
      <Action ID="GRASP" obj="pot_lid" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Grasp pot -->
      <Action ID="GRASP" obj="pot" />
      <!-- Approach plate -->
      <Action ID="APPROACH" obj="plate" />
      <!-- Place on plate -->
      <Action ID="PLACE_ON_TOP" obj="plate" />
      <!-- Navigate to tool -->
      <Action ID="NAVIGATE_TO" obj="tool" />
      <!-- Grasp tool -->
      <Action ID="GRASP" obj="tool" />
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Nudge pot -->
      <Action ID="NUDGE" obj="pot" />
      <!-- Drop -->
      <Action ID="DROP" />
    </Sequence>
  </BehaviorTree>
</root>
