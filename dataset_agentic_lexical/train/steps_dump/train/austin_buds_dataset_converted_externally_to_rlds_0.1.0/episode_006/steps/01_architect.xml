<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Unseal lid -->
      <Action ID="UNSEAL" obj="lid" />
      <!-- Go to lid -->
      <Action ID="GO_TO" obj="lid" />
      <!-- Grab lid -->
      <Action ID="GRAB" obj="lid" />
      <!-- Approach table -->
      <Action ID="APPROACH" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Grasp pot -->
      <Action ID="GRASP" obj="pot" />
      <!-- Navigate to plate -->
      <Action ID="NAVIGATE_TO" obj="plate" />
      <!-- Lay on plate -->
      <Action ID="LAY_ON" obj="plate" />
      <!-- Approach tool -->
      <Action ID="APPROACH" obj="tool" />
      <!-- Shove pot -->
      <Action ID="SHOVE" obj="pot" />
    </Sequence>
  </BehaviorTree>
</root>
