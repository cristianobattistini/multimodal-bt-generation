<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to pot -->
      <Action ID="MOVE_TO" obj="pot" />
      <!-- Unlock pot -->
      <Action ID="UNLOCK" obj="pot" />
      <!-- Navigate to lid -->
      <Action ID="NAVIGATE_TO" obj="lid" />
      <!-- Grasp lid -->
      <Action ID="GRASP" obj="lid" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place lid on table -->
      <Action ID="PLACE_ON_TOP" obj="lid" surface="table" />
      <!-- Go to pot -->
      <Action ID="GO_TO" obj="pot" />
      <!-- Grab pot -->
      <Action ID="GRAB" obj="pot" />
      <!-- Approach plate -->
      <Action ID="APPROACH" obj="plate" />
      <!-- Place on plate -->
      <Action ID="PLACE_ON_TOP" obj="plate" />
      <!-- Approach tool -->
      <Action ID="APPROACH" obj="tool" />
      <!-- Move to pot -->
      <Action ID="MOVE_TO" obj="pot" />
      <!-- Push pot (use spatula to push pot to front edge of table) -->
      <Action ID="PUSH" obj="pot" />
    </Sequence>
  </BehaviorTree>
</root>
