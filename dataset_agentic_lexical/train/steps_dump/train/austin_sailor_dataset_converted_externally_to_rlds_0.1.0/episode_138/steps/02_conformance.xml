<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to bread -->
      <Action ID="GO_TO" obj="bread" />
      <!-- Grip bread -->
      <Action ID="GRIP" obj="bread" />
      <!-- Go to serving_area -->
      <Action ID="GO_TO" obj="serving_area" />
      <!-- Place bread on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="bread" surface="serving_area" />
      <!-- Approach butter -->
      <Action ID="APPROACH" obj="butter" />
      <!-- Pick butter -->
      <Action ID="PICK" obj="butter" />
      <!-- Go to serving_area -->
      <Action ID="GO_TO" obj="serving_area" />
      <!-- Set on serving_area -->
      <Action ID="SET_ON" obj="serving_area" />
      <!-- Navigate to milk -->
      <Action ID="NAVIGATE_TO" obj="milk" />
      <!-- Grab milk -->
      <Action ID="GRAB" obj="milk" />
      <!-- Move to serving_area -->
      <Action ID="MOVE_TO" obj="serving_area" />
      <!-- Put on serving_area -->
      <Action ID="PUT_ON" obj="serving_area" />
    </Sequence>
  </BehaviorTree>
</root>
