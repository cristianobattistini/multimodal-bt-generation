<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to bread -->
      <Action ID="NAVIGATE_TO" obj="bread" />
      <!-- Grasp bread -->
      <Action ID="GRASP" obj="bread" />
      <!-- Navigate to plate -->
      <Action ID="NAVIGATE_TO" obj="plate" />
      <!-- Place on plate -->
      <Action ID="PLACE_ON_TOP" obj="plate" />
      <!-- Navigate to butter -->
      <Action ID="NAVIGATE_TO" obj="butter" />
      <!-- Grab butter -->
      <Action ID="GRAB" obj="butter" />
      <!-- Go to plate -->
      <Action ID="GO_TO" obj="plate" />
      <!-- Put on plate -->
      <Action ID="PUT_ON" obj="plate" />
      <!-- Move to milk -->
      <Action ID="MOVE_TO" obj="milk" />
      <!-- Grasp milk -->
      <Action ID="GRASP" obj="milk" />
      <!-- Approach plate -->
      <Action ID="APPROACH" obj="plate" />
      <!-- Place on plate -->
      <Action ID="PLACE_ON_TOP" obj="plate" />
    </Sequence>
  </BehaviorTree>
</root>
