<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach fish -->
      <Action ID="APPROACH" obj="fish" />
      <!-- Grasp fish -->
      <Action ID="GRASP" obj="fish" />
      <!-- Go to frying_pan -->
      <Action ID="GO_TO" obj="frying_pan" />
      <!-- Place inside frying_pan -->
      <Action ID="PLACE_INSIDE" obj="frying_pan" />
      <!-- Go to sausage -->
      <Action ID="GO_TO" obj="sausage" />
      <!-- Grasp sausage -->
      <Action ID="GRASP" obj="sausage" />
      <!-- Navigate to frying_pan -->
      <Action ID="NAVIGATE_TO" obj="frying_pan" />
      <!-- Place inside frying_pan -->
      <Action ID="PLACE_INSIDE" obj="frying_pan" />
      <!-- Navigate to tomato -->
      <Action ID="NAVIGATE_TO" obj="tomato" />
      <!-- Pick tomato -->
      <Action ID="PICK" obj="tomato" />
      <!-- Navigate to frying_pan -->
      <Action ID="NAVIGATE_TO" obj="frying_pan" />
      <!-- Place tomato inside frying_pan -->
      <Action ID="PLACE_INSIDE" obj="tomato" container="frying_pan" />
    </Sequence>
  </BehaviorTree>
</root>
