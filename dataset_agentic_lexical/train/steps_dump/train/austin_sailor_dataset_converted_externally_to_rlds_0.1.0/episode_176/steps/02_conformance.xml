<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach bread -->
      <Action ID="APPROACH" obj="bread" />
      <!-- Grasp bread -->
      <Action ID="GRASP" obj="bread" />
      <!-- Go to serving_area -->
      <Action ID="GO_TO" obj="serving_area" />
      <!-- Place on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="serving_area" />
      <!-- Move to butter -->
      <Action ID="MOVE_TO" obj="butter" />
      <!-- Grasp butter -->
      <Action ID="GRASP" obj="butter" />
      <!-- Navigate to serving_area -->
      <Action ID="NAVIGATE_TO" obj="serving_area" />
      <!-- Place on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="serving_area" />
      <!-- Navigate to milk -->
      <Action ID="NAVIGATE_TO" obj="milk" />
      <!-- Grasp milk -->
      <Action ID="GRASP" obj="milk" />
      <!-- Go to serving_area -->
      <Action ID="GO_TO" obj="serving_area" />
      <!-- Place milk on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="milk" surface="serving_area" />
    </Sequence>
  </BehaviorTree>
</root>
