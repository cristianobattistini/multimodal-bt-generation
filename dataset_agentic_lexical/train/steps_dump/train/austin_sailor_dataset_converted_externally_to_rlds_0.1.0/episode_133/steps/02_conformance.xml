<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to fish -->
      <Action ID="NAVIGATE_TO" obj="fish" />
      <!-- Grip fish -->
      <Action ID="GRIP" obj="fish" />
      <!-- Go to frying_pan -->
      <Action ID="GO_TO" obj="frying_pan" />
      <!-- Place fish inside frying_pan -->
      <Action ID="PLACE_INSIDE" obj="fish" container="frying_pan" />
      <!-- Navigate to sausage -->
      <Action ID="NAVIGATE_TO" obj="sausage" />
      <!-- Grasp sausage -->
      <Action ID="GRASP" obj="sausage" />
      <!-- Navigate to frying_pan -->
      <Action ID="NAVIGATE_TO" obj="frying_pan" />
      <!-- Place sausage inside frying_pan -->
      <Action ID="PLACE_INSIDE" obj="sausage" container="frying_pan" />
      <!-- Approach tomato -->
      <Action ID="APPROACH" obj="tomato" />
      <!-- Grasp tomato -->
      <Action ID="GRASP" obj="tomato" />
      <!-- Go to frying_pan -->
      <Action ID="GO_TO" obj="frying_pan" />
      <!-- Place tomato inside frying_pan -->
      <Action ID="PLACE_INSIDE" obj="tomato" container="frying_pan" />
    </Sequence>
  </BehaviorTree>
</root>
