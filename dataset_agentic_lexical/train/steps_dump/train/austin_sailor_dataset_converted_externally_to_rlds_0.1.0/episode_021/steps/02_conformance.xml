<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pan -->
      <Action ID="NAVIGATE_TO" obj="pan" />
      <!-- Grasp pan -->
      <Action ID="GRASP" obj="pan" />
      <!-- Navigate to stove -->
      <Action ID="NAVIGATE_TO" obj="stove" />
      <!-- Place pan on stove -->
      <Action ID="PLACE_ON_TOP" obj="pan" surface="stove" />
      <!-- Move to fish -->
      <Action ID="MOVE_TO" obj="fish" />
      <!-- Grasp fish -->
      <Action ID="GRASP" obj="fish" />
      <!-- Approach pan -->
      <Action ID="APPROACH" obj="pan" />
      <!-- Place inside pan -->
      <Action ID="PLACE_INSIDE" obj="pan" />
      <!-- Approach sausage -->
      <Action ID="APPROACH" obj="sausage" />
      <!-- Grasp sausage -->
      <Action ID="GRASP" obj="sausage" />
      <!-- Move to pan -->
      <Action ID="MOVE_TO" obj="pan" />
      <!-- Place inside pan -->
      <Action ID="PLACE_INSIDE" obj="pan" />
    </Sequence>
  </BehaviorTree>
</root>
