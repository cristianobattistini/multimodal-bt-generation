<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to bread -->
      <Action ID="GO_TO" obj="bread" />
      <!-- Grab bread -->
      <Action ID="GRAB" obj="bread" />
      <!-- Go to serving_area -->
      <Action ID="GO_TO" obj="serving_area" />
      <!-- Place bread on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="bread" surface="serving_area" />
      <!-- Approach butter -->
      <Action ID="APPROACH" obj="butter" />
      <!-- Pick butter -->
      <Action ID="PICK" obj="butter" />
      <!-- Go to serving_area -->
      <Action ID="GO_TO" obj="serving_area" />
      <!-- Put on serving_area -->
      <Action ID="PUT_ON" obj="serving_area" />
      <!-- Approach milk -->
      <Action ID="APPROACH" obj="milk" />
      <!-- Grab milk -->
      <Action ID="GRAB" obj="milk" />
      <!-- Navigate to serving_area -->
      <Action ID="NAVIGATE_TO" obj="serving_area" />
      <!-- Place milk on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="milk" surface="serving_area" />
    </Sequence>
  </BehaviorTree>
</root>
