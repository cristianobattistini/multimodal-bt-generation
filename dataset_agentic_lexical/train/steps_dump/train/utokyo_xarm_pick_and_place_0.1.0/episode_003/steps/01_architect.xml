<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach white_plate -->
      <Action ID="APPROACH" obj="white_plate" />
      <!-- Pick white_plate -->
      <Action ID="PICK" obj="white_plate" />
      <!-- Approach red_plate -->
      <Action ID="APPROACH" obj="red_plate" />
      <!-- Place white_plate on red_plate -->
      <Action ID="PLACE_ON_TOP" obj="white_plate" surface="red_plate" />
    </Sequence>
  </BehaviorTree>
</root>
