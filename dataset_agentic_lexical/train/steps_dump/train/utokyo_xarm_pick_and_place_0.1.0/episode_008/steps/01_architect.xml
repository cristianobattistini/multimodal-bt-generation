<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to white_plate -->
      <Action ID="GO_TO" obj="white_plate" />
      <!-- Grip white_plate -->
      <Action ID="GRIP" obj="white_plate" />
      <!-- Navigate to red_plate -->
      <Action ID="NAVIGATE_TO" obj="red_plate" />
      <!-- Place on top of red_plate -->
      <Action ID="PLACE_ON_TOP" obj="red_plate" />
    </Sequence>
  </BehaviorTree>
</root>
