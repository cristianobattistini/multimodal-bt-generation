<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to towel -->
      <Action ID="NAVIGATE_TO" obj="towel"/>
      <!-- Grasp towel -->
      <Action ID="GRASP" obj="towel"/>
      <!-- Unfold towel (spread edges outward) -->
      <Action ID="UNFOLD" obj="towel"/>
      <!-- Navigate to green_mat -->
      <Action ID="NAVIGATE_TO" obj="green_mat"/>
      <!-- Place on green_mat -->
      <Action ID="PLACE_ON_TOP" obj="green_mat"/>
      <!-- Release -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>