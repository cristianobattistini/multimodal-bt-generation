<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Unseal pot -->
      <Action ID="UNSEAL" obj="pot" />
      <!-- Navigate to lid -->
      <Action ID="NAVIGATE_TO" obj="lid" />
      <!-- Grip lid -->
      <Action ID="GRIP" obj="lid" />
    </Sequence>
  </BehaviorTree>
</root>
