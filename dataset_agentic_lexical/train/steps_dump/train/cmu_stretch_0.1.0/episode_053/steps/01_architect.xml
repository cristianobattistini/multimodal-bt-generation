<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to pot -->
      <Action ID="MOVE_TO" obj="pot" />
      <!-- Navigate to lid -->
      <Action ID="NAVIGATE_TO" obj="lid" />
      <!-- Grasp lid -->
      <Action ID="GRASP" obj="lid" />
      <!-- Unlock lid -->
      <Action ID="UNLOCK" obj="lid" />
    </Sequence>
  </BehaviorTree>
</root>
