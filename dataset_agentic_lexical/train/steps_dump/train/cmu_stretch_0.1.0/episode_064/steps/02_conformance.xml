<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot"/>
      <!-- Navigate to lid -->
      <Action ID="NAVIGATE_TO" obj="lid"/>
      <!-- Grasp lid -->
      <Action ID="GRASP" obj="lid"/>
      <!-- Open pot (lift the lid off the pot) -->
      <Action ID="OPEN" obj="pot"/>
      <!-- Release -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>