<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pink_cloth -->
      <Action ID="NAVIGATE_TO" obj="pink_cloth" />
      <!-- Grasp pink_cloth -->
      <Action ID="GRASP" obj="pink_cloth" />
      <!-- Fold pink_cloth into a smaller rectangle -->
      <Action ID="FOLD" obj="pink_cloth" />
      <!-- Go to table -->
      <Action ID="GO_TO" obj="table" />
      <!-- Place pink_cloth on table -->
      <Action ID="PLACE_ON_TOP" obj="pink_cloth" surface="table" />
    </Sequence>
  </BehaviorTree>
</root>
