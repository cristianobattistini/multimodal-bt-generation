<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to pink_cloth -->
      <Action ID="MOVE_TO" obj="pink_cloth" />
      <!-- Grasp pink_cloth -->
      <Action ID="GRASP" obj="pink_cloth" />
      <!-- Double over pink_cloth -->
      <Action ID="DOUBLE_OVER" obj="pink_cloth" />
      <!-- Approach table -->
      <Action ID="APPROACH" obj="table" />
      <!-- Place pink_cloth on table -->
      <Action ID="PLACE_ON_TOP" obj="pink_cloth" surface="table" />
    </Sequence>
  </BehaviorTree>
</root>
