<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to cloth -->
      <Action ID="NAVIGATE_TO" obj="cloth" />
      <!-- Grasp cloth -->
      <Action ID="GRASP" obj="cloth" />
      <!-- Approach table -->
      <Action ID="APPROACH" obj="table" />
      <!-- Fold cloth in half -->
      <Action ID="FOLD" obj="cloth" />
      <!-- Place on table (neatly on table surface) -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
