<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to blue_gear -->
      <Action ID="GO_TO" obj="blue_gear" />
      <!-- Grasp blue_gear -->
      <Action ID="GRASP" obj="blue_gear" />
      <!-- Approach right_peg -->
      <Action ID="APPROACH" obj="right_peg" />
      <!-- Place on right_peg -->
      <Action ID="PLACE_ON_TOP" obj="right_peg" />
      <!-- Move to red_gear -->
      <Action ID="MOVE_TO" obj="red_gear" />
      <!-- Grip red_gear -->
      <Action ID="GRIP" obj="red_gear" />
      <!-- Approach blue_gear -->
      <Action ID="APPROACH" obj="blue_gear" />
      <!-- Place red_gear on blue_gear -->
      <Action ID="PLACE_ON_TOP" obj="red_gear" surface="blue_gear" />
    </Sequence>
  </BehaviorTree>
</root>
