<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to silver_pot -->
      <Action ID="NAVIGATE_TO" obj="silver_pot"/>
      <!-- Grasp silver_pot -->
      <Action ID="GRASP" obj="silver_pot"/>
      <!-- Navigate to blue_towel (position at front edge of table next to towel) -->
      <Action ID="NAVIGATE_TO" obj="blue_towel"/>
      <!-- Place next to blue_towel -->
      <Action ID="PLACE_NEXT_TO" obj="blue_towel"/>
    </Sequence>
  </BehaviorTree>
</root>