<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Clamp pot -->
      <Action ID="CLAMP" obj="pot" />
      <!-- Navigate to table (place on left edge of table) -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place pot on table -->
      <Action ID="PLACE_ON_TOP" obj="pot" surface="table" />
    </Sequence>
  </BehaviorTree>
</root>
