<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to salt -->
      <Action ID="GO_TO" obj="salt" />
      <!-- Grab salt -->
      <Action ID="GRAB" obj="salt" />
      <!-- Move to yellow_brush -->
      <Action ID="MOVE_TO" obj="yellow_brush" />
      <!-- Place salt next to yellow_brush -->
      <Action ID="PLACE_NEXT_TO" obj="salt" reference="yellow_brush" />
    </Sequence>
  </BehaviorTree>
</root>
