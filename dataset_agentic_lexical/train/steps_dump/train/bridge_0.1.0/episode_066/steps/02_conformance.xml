<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to pot -->
      <Action ID="MOVE_TO" obj="pot" />
      <!-- Grip pot -->
      <Action ID="GRIP" obj="pot" />
      <!-- Navigate to yellow_cloth -->
      <Action ID="NAVIGATE_TO" obj="yellow_cloth" />
      <!-- Lay on yellow_cloth -->
      <Action ID="LAY_ON" obj="yellow_cloth" />
    </Sequence>
  </BehaviorTree>
</root>
