<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to cap -->
      <Action ID="MOVE_TO" obj="cap" />
      <!-- Pick cap -->
      <Action ID="PICK" obj="cap" />
      <!-- Locomote to bottle -->
      <Action ID="LOCOMOTE_TO" obj="bottle" />
      <!-- Place inside bottle (insert cap into bottle neck) -->
      <Action ID="PLACE_INSIDE" obj="bottle" />
    </Sequence>
  </BehaviorTree>
</root>
