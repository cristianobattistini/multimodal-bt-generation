<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to bottle -->
      <Action ID="NAVIGATE_TO" obj="bottle"/>
      <!-- Grasp bottle -->
      <Action ID="GRASP" obj="bottle"/>
      <!-- Screw (twist) bottle cap to loosen -->
      <Action ID="SCREW" obj="bottle"/>
      <!-- Open bottle (remove cap) -->
      <Action ID="OPEN" obj="bottle"/>
      <!-- Release -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>