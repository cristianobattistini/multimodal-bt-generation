<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to apple -->
      <Action ID="NAVIGATE_TO" obj="apple" />
      <!-- Pick apple -->
      <Action ID="PICK" obj="apple" />
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Place inside pot -->
      <Action ID="PLACE_INSIDE" obj="pot" />
    </Sequence>
  </BehaviorTree>
</root>
