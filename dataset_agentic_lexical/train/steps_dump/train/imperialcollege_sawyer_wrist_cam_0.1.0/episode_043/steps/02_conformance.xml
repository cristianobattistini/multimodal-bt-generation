<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pitcher -->
      <Action ID="NAVIGATE_TO" obj="pitcher" />
      <!-- Grasp pitcher -->
      <Action ID="GRASP" obj="pitcher" />
      <!-- Approach mug -->
      <Action ID="APPROACH" obj="mug" />
      <!-- Pour mug -->
      <Action ID="POUR" obj="mug" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
