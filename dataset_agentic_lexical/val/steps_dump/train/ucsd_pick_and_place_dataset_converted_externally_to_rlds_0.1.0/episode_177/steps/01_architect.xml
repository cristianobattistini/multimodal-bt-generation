<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach pot -->
      <Action ID="APPROACH" obj="pot" />
      <!-- Grip pot -->
      <Action ID="GRIP" obj="pot" />
      <!-- Navigate to sink -->
      <Action ID="NAVIGATE_TO" obj="sink" />
      <!-- Place pot inside sink -->
      <Action ID="PLACE_INSIDE" obj="pot" container="sink" />
    </Sequence>
  </BehaviorTree>
</root>
