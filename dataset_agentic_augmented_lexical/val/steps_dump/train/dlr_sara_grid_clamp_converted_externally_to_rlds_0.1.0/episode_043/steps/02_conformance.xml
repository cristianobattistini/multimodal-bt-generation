<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to grid_clamp -->
      <Action ID="NAVIGATE_TO" obj="grid_clamp" />
      <!-- Grasp grid_clamp -->
      <Action ID="GRASP" obj="grid_clamp" />
      <!-- Locomote to grid_board -->
      <Action ID="LOCOMOTE_TO" obj="grid_board" />
      <Sequence>
        <!-- Check grid_board is holding before PLACE_ON_TOP -->
        <Condition ID="IS_HOLDING" obj="grid_board" />
        <!-- Place on grid_board -->
        <Action ID="PLACE_ON_TOP" obj="grid_board" />
      </Sequence>
    </Sequence>
  </BehaviorTree>
</root>
