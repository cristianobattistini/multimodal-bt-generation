<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to grid_clamp -->
      <Action ID="NAVIGATE_TO" obj="grid_clamp" />
      <!-- Fallback: if GRASP grid_clamp fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp grid_clamp -->
        <Action ID="GRASP" obj="grid_clamp" />
        <Sequence>
          <!-- Push grid_clamp forward toward front edge of table -->
          <Action ID="PUSH" obj="grid_clamp" />
          <!-- Grasp grid_clamp -->
          <Action ID="PICK" obj="grid_clamp" />
        </Sequence>
      </Fallback>
      <!-- Navigate to grid -->
      <Action ID="MOVE_TO" obj="grid" />
      <!-- Place on grid -->
      <Action ID="PLACE_ON_TOP" obj="grid" />
    </Sequence>
  </BehaviorTree>
</root>
