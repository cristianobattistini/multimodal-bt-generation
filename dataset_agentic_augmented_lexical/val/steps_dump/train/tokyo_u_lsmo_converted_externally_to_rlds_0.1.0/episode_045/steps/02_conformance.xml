<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Navigate to scissors -->
      <Action ID="NAVIGATE_TO" obj="scissors" />
      <!-- Fallback: if GRASP scissors fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp scissors -->
        <Action ID="GRASP" obj="scissors" />
        <Sequence>
          <!-- Push scissors forward toward front edge of table -->
          <Action ID="SLIDE" obj="scissors" />
          <!-- Grasp scissors -->
          <Action ID="GRASP" obj="scissors" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
