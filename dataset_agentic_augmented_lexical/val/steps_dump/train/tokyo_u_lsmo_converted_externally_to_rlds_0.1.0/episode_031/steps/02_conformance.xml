<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Move to black_holder -->
      <Action ID="MOVE_TO" obj="black_holder" />
      <!-- Navigate to blue_pen -->
      <Action ID="NAVIGATE_TO" obj="blue_pen" />
      <!-- Fallback: if GRASP blue_pen fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp blue_pen -->
        <Action ID="PICK" obj="blue_pen" />
        <Sequence>
          <!-- Push blue_pen forward toward front edge of table -->
          <Action ID="NUDGE" obj="blue_pen" />
          <!-- Grasp blue_pen -->
          <Action ID="GRIP" obj="blue_pen" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
