<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to pot -->
      <Action ID="MOVE_TO" obj="pot" />
      <!-- Retry GRASP pot up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Grasp pot -->
        <Action ID="GRIP" obj="pot" />
      </RetryUntilSuccessful>
      <!-- Grip pot -->
      <Action ID="APPROACH" obj="sink" />
      <!-- Approach sink -->
      <Action ID="PLACE_INSIDE" obj="pot" container="sink" />
    </Sequence>
  </BehaviorTree>
</root>
