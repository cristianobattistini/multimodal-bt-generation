<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Fallback: if GRASP pot fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp pot -->
        <Action ID="GRASP" obj="pot" />
        <Sequence>
          <!-- Push pot forward toward front edge of table -->
          <Action ID="PUSH" obj="pot" />
          <!-- Grasp pot -->
          <Action ID="GRASP" obj="pot" />
        </Sequence>
      </Fallback>
      <!-- Navigate to sink -->
      <Action ID="NAVIGATE_TO" obj="sink" />
      <!-- Place inside sink -->
      <Action ID="PLACE_INSIDE" obj="sink" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
