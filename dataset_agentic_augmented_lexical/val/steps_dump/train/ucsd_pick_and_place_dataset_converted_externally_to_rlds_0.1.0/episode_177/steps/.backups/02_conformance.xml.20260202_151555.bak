<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Execute subtree ApproachPot -->
      <SubTree ID="ApproachPot" />
      <!-- Navigate to sink -->
      <Action ID="NAVIGATE_TO" obj="sink" />
      <!-- Place inside sink -->
      <Action ID="PLACE_INSIDE" obj="sink" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
  <!-- Subtree definition ApproachPot -->
  <BehaviorTree ID="ApproachPot">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Retry GRASP pot up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Grasp pot -->
        <Action ID="GRASP" obj="pot" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
