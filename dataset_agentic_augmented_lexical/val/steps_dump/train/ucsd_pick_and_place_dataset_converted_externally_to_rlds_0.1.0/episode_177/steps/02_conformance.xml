<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Execute subtree ApproachPot -->
      <SubTree ID="ApproachPot" />
      <!-- Go to sink -->
      <Action ID="GO_TO" obj="sink" />
      <!-- Put in sink -->
      <Action ID="PUT_IN" obj="sink" />
    </Sequence>
  </BehaviorTree>
  <!-- Subtree definition ApproachPot -->
  <BehaviorTree ID="ApproachPot">
    <Sequence>
      <!-- Go to pot -->
      <Action ID="GO_TO" obj="pot" />
      <!-- Retry GRASP pot up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Grasp pot -->
        <Action ID="GRASP" obj="pot" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
