<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to pot -->
      <Action ID="GO_TO" obj="pot" />
      <!-- Unseal lid -->
      <Action ID="UNSEAL" obj="lid" />
      <!-- Approach lid -->
      <Action ID="APPROACH" obj="lid" />
      <!-- Pick lid -->
      <Action ID="PICK" obj="lid" />
      <!-- Approach table -->
      <Action ID="APPROACH" obj="table" />
      <!-- Place lid on table -->
      <Action ID="PLACE_ON_TOP" obj="lid" surface="table" />
      <!-- Approach pot -->
      <Action ID="APPROACH" obj="pot" />
      <!-- Pick pot -->
      <Action ID="PICK" obj="pot" />
      <!-- Go to plate -->
      <Action ID="GO_TO" obj="plate" />
      <!-- Retry PLACE_ON_TOP plate up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Place on plate -->
        <Action ID="STACK_ON" obj="plate" />
      </RetryUntilSuccessful>
      <!-- Stack on plate -->
      <Action ID="GO_TO" obj="tool" />
      <!-- Go to tool -->
      <Action ID="GRAB" obj="tool" />
      <!-- Grab tool -->
      <Action ID="GO_TO" obj="pot" />
      <!-- Go to pot -->
      <Action ID="SHOVE" obj="pot" />
      <!-- Shove pot -->
      <Action ID="LET_GO" />
    </Sequence>
  </BehaviorTree>
</root>
