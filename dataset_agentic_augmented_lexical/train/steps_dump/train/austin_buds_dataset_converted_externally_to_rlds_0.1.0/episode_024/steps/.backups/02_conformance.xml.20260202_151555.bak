<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Open pot -->
      <Action ID="OPEN" obj="pot" />
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Check pot is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="pot" />
      <!-- Fallback: if GRASP pot fails, try alternative to reposition -->
      <Fallback>
        <!-- Timeout: GRASP pot within 10s -->
        <Timeout msec="10000">
          <!-- Grasp pot -->
          <Action ID="GRASP" obj="pot" />
        </Timeout>
        <Sequence>
          <!-- Push pot forward toward front edge of table -->
          <Action ID="PUSH" obj="pot" />
          <!-- Grasp pot -->
          <Action ID="GRASP" obj="pot" />
        </Sequence>
      </Fallback>
      <!-- Navigate to plate -->
      <Action ID="NAVIGATE_TO" obj="plate" />
      <!-- Place on plate -->
      <Action ID="PLACE_ON_TOP" obj="plate" />
      <!-- Release -->
      <Action ID="RELEASE" />
      <!-- Navigate to tool -->
      <Action ID="NAVIGATE_TO" obj="tool" />
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Push pot forward toward front edge of table -->
      <Action ID="PUSH" obj="pot" />
    </Sequence>
  </BehaviorTree>
</root>
