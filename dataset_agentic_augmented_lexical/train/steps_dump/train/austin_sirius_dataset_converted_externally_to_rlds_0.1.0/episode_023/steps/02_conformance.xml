<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Execute subtree ApproachBlueGear -->
      <SubTree ID="ApproachBlueGear" />
      <!-- Navigate to right_peg -->
      <Action ID="NAVIGATE_TO" obj="right_peg" />
      <!-- Place on right_peg -->
      <Action ID="PLACE_ON_TOP" obj="right_peg" />
      <!-- Navigate to red_gear -->
      <Action ID="NAVIGATE_TO" obj="red_gear" />
      <!-- Grab red_gear -->
      <Action ID="GRAB" obj="red_gear" />
      <!-- Navigate to right_peg -->
      <Action ID="NAVIGATE_TO" obj="right_peg" />
      <!-- Place red_gear on right_peg -->
      <Action ID="PLACE_ON_TOP" obj="red_gear" surface="right_peg" />
    </Sequence>
  </BehaviorTree>
  <!-- Subtree definition ApproachBlueGear -->
  <BehaviorTree ID="ApproachBlueGear">
    <Sequence>
      <!-- Navigate to blue_gear -->
      <Action ID="NAVIGATE_TO" obj="blue_gear" />
      <!-- Retry GRAB blue_gear up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Grab blue_gear -->
        <Action ID="GRAB" obj="blue_gear" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
