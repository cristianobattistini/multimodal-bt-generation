<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Execute subtree ApproachBlueGear -->
      <SubTree ID="ApproachBlueGear" />
      <!-- Move to right_peg -->
      <Action ID="MOVE_TO" obj="right_peg" />
      <!-- Set on right_peg -->
      <Action ID="SET_ON" obj="right_peg" />
      <!-- Move to red_gear -->
      <Action ID="MOVE_TO" obj="red_gear" />
      <!-- Grip red_gear -->
      <Action ID="GRIP" obj="red_gear" />
      <!-- Move right_peg -->
      <Action ID="MOVE_TO" obj="right_peg" />
      <!-- Place red_gear on right_peg -->
      <Action ID="PLACE_ON_TOP" obj="red_gear" surface="right_peg" />
    </Sequence>
  </BehaviorTree>
  <!-- Subtree definition ApproachBlueGear -->
  <BehaviorTree ID="ApproachBlueGear">
    <Sequence>
      <!-- Move to blue_gear -->
      <Action ID="MOVE_TO" obj="blue_gear" />
      <!-- Grip blue_gear -->
      <Action ID="GRIP" obj="blue_gear" />
    </Sequence>
  </BehaviorTree>
</root>
