<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to drawer -->
      <Action ID="NAVIGATE_TO" obj="drawer" />
      <!-- Retry GRASP drawer up to 4 attempts -->
      <RetryUntilSuccessful num_attempts="4">
        <!-- Grasp drawer -->
        <Action ID="GRASP" obj="drawer" />
      </RetryUntilSuccessful>
      <!-- Open drawer -->
      <Action ID="OPEN" obj="drawer" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
