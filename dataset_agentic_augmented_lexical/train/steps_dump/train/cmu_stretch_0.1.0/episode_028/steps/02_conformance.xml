<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to top_drawer -->
      <Action ID="MOVE_TO" obj="top_drawer" />
      <!-- Check top_drawer is graspable before GRASP -->
      <Condition ID="IS_GRASPABLE" obj="top_drawer" />
      <!-- Retry GRASP top_drawer up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Grasp top_drawer -->
        <Action ID="GRASP" obj="top_drawer" />
      </RetryUntilSuccessful>
      <!-- Open top_drawer -->
      <Action ID="UNLOCK" obj="top_drawer" />
      <!-- Unlock top_drawer -->
      <Action ID="DROP" />
    </Sequence>
  </BehaviorTree>
</root>
