<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to dishwasher_handle -->
      <Action ID="NAVIGATE_TO" obj="dishwasher_handle" />
      <Sequence>
        <!-- Check dishwasher_handle is visible before GRASP -->
        <Condition ID="IS_VISIBLE" obj="dishwasher_handle" />
        <!-- Retry GRASP dishwasher_handle up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Timeout: GRASP dishwasher_handle within 15s -->
          <Timeout msec="15000">
            <!-- Grasp dishwasher_handle -->
            <Action ID="GRASP" obj="dishwasher_handle" />
          </Timeout>
        </RetryUntilSuccessful>
      </Sequence>
      <!-- Open dishwasher -->
      <Action ID="OPEN" obj="dishwasher" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
