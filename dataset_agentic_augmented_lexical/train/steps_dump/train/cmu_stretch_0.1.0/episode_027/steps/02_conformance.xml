<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to dishwasher_handle -->
      <Action ID="NAVIGATE_TO" obj="dishwasher_handle" />
      <!-- Check dishwasher_handle is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="dishwasher_handle" />
      <!-- Retry GRASP dishwasher_handle up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Grasp dishwasher_handle -->
        <Action ID="GRASP" obj="dishwasher_handle" />
      </RetryUntilSuccessful>
      <!-- Open dishwasher -->
      <Action ID="OPEN" obj="dishwasher" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
