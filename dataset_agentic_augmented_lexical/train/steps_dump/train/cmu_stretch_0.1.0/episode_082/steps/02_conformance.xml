<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Navigate to lid -->
      <Action ID="NAVIGATE_TO" obj="lid" />
      <!-- Check lid is reachable before GRASP -->
      <Condition ID="IS_REACHABLE" obj="lid" />
      <!-- Fallback: if GRASP lid fails, try alternative to reposition -->
      <Fallback>
        <!-- Grasp lid -->
        <Action ID="GRASP" obj="lid" />
        <Sequence>
          <!-- Push lid forward toward front edge of table -->
          <Action ID="PUSH" obj="lid" />
          <!-- Grasp lid -->
          <Action ID="GRASP" obj="lid" />
        </Sequence>
      </Fallback>
      <!-- Open lid -->
      <Action ID="OPEN" obj="lid" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
