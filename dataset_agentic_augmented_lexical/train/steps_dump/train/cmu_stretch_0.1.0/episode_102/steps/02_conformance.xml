<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Execute subtree ApproachPot -->
      <SubTree ID="ApproachPot" />
      <!-- Pick lid -->
      <Action ID="PICK" obj="lid" />
      <!-- Open lid -->
      <Action ID="OPEN" obj="lid" />
      <!-- Let go -->
      <Action ID="LET_GO" />
    </Sequence>
  </BehaviorTree>
  <!-- Subtree definition ApproachPot -->
  <BehaviorTree ID="ApproachPot">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Navigate to lid -->
      <Action ID="NAVIGATE_TO" obj="lid" />
    </Sequence>
  </BehaviorTree>
</root>
