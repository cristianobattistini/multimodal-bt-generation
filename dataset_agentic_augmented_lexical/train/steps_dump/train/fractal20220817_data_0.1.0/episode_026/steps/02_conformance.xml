<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to pepsi_can -->
      <Action ID="GO_TO" obj="pepsi_can" />
      <!-- Grasp pepsi_can -->
      <Action ID="GRASP" obj="pepsi_can" />
      <Sequence>
        <!-- Check blue_plastic_bottle is visible before NAVIGATE_TO -->
        <Condition ID="IS_VISIBLE" obj="blue_plastic_bottle" />
        <!-- Navigate to blue_plastic_bottle -->
        <Action ID="NAVIGATE_TO" obj="blue_plastic_bottle" />
      </Sequence>
      <!-- Place next to blue_plastic_bottle -->
      <Action ID="PLACE_NEXT_TO" obj="blue_plastic_bottle" />
    </Sequence>
  </BehaviorTree>
</root>
