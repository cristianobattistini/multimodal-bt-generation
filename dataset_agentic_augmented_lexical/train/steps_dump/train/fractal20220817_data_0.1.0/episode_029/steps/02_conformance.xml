<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Execute subtree ApproachRedbullCan -->
      <SubTree ID="ApproachRedbullCan" />
      <!-- Return redbull_can upright (flip) -->
      <Action ID="FLIP" obj="redbull_can" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
  <!-- Subtree definition ApproachRedbullCan -->
  <BehaviorTree ID="ApproachRedbullCan">
    <Sequence>
      <!-- Navigate to redbull_can -->
      <Action ID="NAVIGATE_TO" obj="redbull_can" />
      <!-- Retry GRASP redbull_can up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Grasp redbull_can -->
        <Action ID="GRASP" obj="redbull_can" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
