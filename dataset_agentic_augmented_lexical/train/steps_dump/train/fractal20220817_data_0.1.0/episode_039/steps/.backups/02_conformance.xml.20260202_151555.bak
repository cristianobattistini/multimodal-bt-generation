<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to bottom_drawer -->
      <Action ID="NAVIGATE_TO" obj="bottom_drawer" />
      <!-- Navigate to green_jalapeno_chip_bag -->
      <Action ID="NAVIGATE_TO" obj="green_jalapeno_chip_bag" />
      <!-- Grasp green_jalapeno_chip_bag -->
      <Action ID="GRASP" obj="green_jalapeno_chip_bag" />
      <!-- Navigate to counter -->
      <Action ID="NAVIGATE_TO" obj="counter" />
      <!-- Fallback: if PLACE_ON_TOP counter fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place on counter -->
        <Action ID="PLACE_ON_TOP" obj="counter" />
        <Sequence>
          <!-- Push counter forward toward front edge of table -->
          <Action ID="PUSH" obj="counter" />
          <!-- Place on counter -->
          <Action ID="PLACE_ON_TOP" obj="counter" />
        </Sequence>
      </Fallback>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
