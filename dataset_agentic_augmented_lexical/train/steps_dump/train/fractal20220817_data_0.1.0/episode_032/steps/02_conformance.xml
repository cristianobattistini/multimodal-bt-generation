      <!-- Pick green_rice_chip_bag -->
      <Action ID="APPROACH" obj="orange" />
      <!-- Approach orange -->
      <Action ID="PLACE_NEXT_TO" obj="green_rice_chip_bag" reference="orange" />
    </Sequence>
  </BehaviorTree>
</root>
