<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to water_bottle -->
      <Action ID="NAVIGATE_TO" obj="water_bottle" />
      <!-- Fallback: if GRASP water_bottle fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp water_bottle -->
        <Action ID="GRASP" obj="water_bottle" />
        <Sequence>
          <!-- Push water_bottle forward toward front edge of table -->
          <Action ID="PUSH" obj="water_bottle" />
          <!-- Grasp water_bottle -->
          <Action ID="GRASP" obj="water_bottle" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
