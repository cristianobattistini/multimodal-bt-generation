<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach cup -->
      <Action ID="APPROACH" obj="cup" />
      <!-- Fallback: if PLACE_INSIDE cup fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry PLACE_INSIDE cup up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Place inside cup -->
          <Action ID="SET_IN" obj="cup" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push cup forward toward front edge of table -->
          <Action ID="NUDGE" obj="cup" />
          <!-- Place inside cup -->
          <Action ID="PUT_IN" obj="cup" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
