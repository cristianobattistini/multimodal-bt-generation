<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach blue_cup -->
      <Action ID="APPROACH" obj="blue_cup" />
      <Sequence>
        <!-- Check blue_cup is visible before GRASP -->
        <Condition ID="IS_VISIBLE" obj="blue_cup" />
        <!-- Grasp blue_cup -->
        <Action ID="GRIP" obj="blue_cup" />
      </Sequence>
      <!-- Grip blue_cup -->
      <Action ID="MOVE_TO" obj="brown_cup" />
      <!-- Move to brown_cup -->
      <Action ID="PLACE_INSIDE" obj="blue_cup" container="brown_cup" />
    </Sequence>
  </BehaviorTree>
</root>
