<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to ranch_bottle -->
      <Action ID="NAVIGATE_TO" obj="ranch_bottle" />
      <!-- Pick ranch_bottle -->
      <Action ID="PICK" obj="ranch_bottle" />
      <!-- Approach pot -->
      <Action ID="APPROACH" obj="pot" />
      <!-- Retry PLACE_INSIDE pot up to 5 attempts -->
      <RetryUntilSuccessful num_attempts="5">
        <!-- Place inside pot -->
        <Action ID="PLACE_INSIDE" obj="ranch_bottle" container="pot" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
