<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to red_bowl -->
      <Action ID="NAVIGATE_TO" obj="red_bowl" />
      <!-- Grasp tiger -->
      <Action ID="GRASP" obj="tiger" />
      <!-- Navigate to grey_bowl -->
      <Action ID="NAVIGATE_TO" obj="grey_bowl" />
      <!-- Fallback: if PLACE_INSIDE grey_bowl fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place inside grey_bowl -->
        <Action ID="PLACE_INSIDE" obj="grey_bowl" />
        <Sequence>
          <!-- Push grey_bowl forward toward front edge of table -->
          <Action ID="PUSH" obj="grey_bowl" />
          <!-- Place inside grey_bowl -->
          <Action ID="PLACE_INSIDE" obj="grey_bowl" />
        </Sequence>
      </Fallback>
      
    </Sequence>
  </BehaviorTree>
</root>
