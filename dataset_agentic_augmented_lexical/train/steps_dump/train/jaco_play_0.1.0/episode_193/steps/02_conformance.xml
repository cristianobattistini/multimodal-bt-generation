<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to steak_meat -->
      <Action ID="GO_TO" obj="steak_meat" />
      <!-- Pick steak_meat -->
      <Action ID="PICK" obj="steak_meat" />
      <!-- Move to white_plate -->
      <Action ID="MOVE_TO" obj="white_plate" />
      <!-- Fallback: if PLACE_INSIDE white_plate fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry PLACE_INSIDE white_plate up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Place inside white_plate -->
          <Action ID="SET_IN" obj="white_plate" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push white_plate forward toward front edge of table -->
          <Action ID="SLIDE" obj="white_plate" />
          <!-- Place inside white_plate -->
          <Action ID="PLACE_INSIDE" obj="white_plate" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
