<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Check burger_meat is visible before NAVIGATE_TO -->
      <Condition ID="IS_VISIBLE" obj="burger_meat" />
      <!-- Timeout: NAVIGATE_TO burger_meat within 20s -->
      <Timeout msec="20000">
        <!-- Navigate to burger_meat -->
        <Action ID="APPROACH" obj="burger_meat" />
      </Timeout>
      <!-- Approach burger_meat -->
      <Action ID="PICK" obj="burger_meat" />
      <!-- Pick burger_meat -->
      <Action ID="APPROACH" obj="oven" />
      <!-- Approach oven -->
      <Action ID="LOAD_INTO" obj="oven" />
    </Sequence>
  </BehaviorTree>
</root>
