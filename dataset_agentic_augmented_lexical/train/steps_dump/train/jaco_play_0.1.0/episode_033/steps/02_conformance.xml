<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Timeout: NAVIGATE_TO apple within 15s -->
      <Timeout msec="15000">
        <!-- Navigate to apple -->
        <Action ID="NAVIGATE_TO" obj="apple" />
      </Timeout>
      <!-- Grasp apple -->
      <Action ID="GRASP" obj="apple" />
    </Sequence>
  </BehaviorTree>
</root>
