<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to milk_dairy -->
      <Action ID="NAVIGATE_TO" obj="milk_dairy" />
      <!-- Grab milk_dairy -->
      <Action ID="GRAB" obj="milk_dairy" />
      <!-- Approach table -->
      <Action ID="APPROACH" obj="table" />
      <!-- Check table is holding before PLACE_ON_TOP -->
      <Condition ID="IS_HOLDING" obj="table" />
      <!-- Fallback: if PLACE_ON_TOP table fails, try alternative to reposition -->
      <Fallback>
        <!-- Place on table -->
        <Action ID="SET_ON" obj="table" />
        <Sequence>
          <!-- Push table forward toward front edge of table -->
          <Action ID="SLIDE" obj="table" />
          <!-- Place on table -->
          <Action ID="SET_ON" obj="table" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
