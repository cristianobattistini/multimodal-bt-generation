<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach orange_fruit -->
      <Action ID="APPROACH" obj="orange_fruit" />
      <!-- Grip orange_fruit -->
      <Action ID="GRIP" obj="orange_fruit" />
      <!-- Move to sink -->
      <Action ID="MOVE_TO" obj="sink" />
      <!-- Fallback: if PLACE_INSIDE sink fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place inside sink -->
        <Action ID="SET_IN" obj="sink" />
        <Sequence>
          <!-- Push sink forward toward front edge of table -->
          <Action ID="PUSH" obj="sink" />
          <!-- Place inside sink -->
          <Action ID="PLACE_INSIDE" obj="sink" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
