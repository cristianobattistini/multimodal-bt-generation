<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to butter_dairy -->
      <Action ID="NAVIGATE_TO" obj="butter_dairy" />
      <!-- Grasp butter_dairy -->
      <Action ID="GRASP" obj="butter_dairy" />
      <Sequence>
        <!-- Check sink is reachable before NAVIGATE_TO -->
        <Condition ID="IS_REACHABLE" obj="sink" />
        <!-- Navigate to sink -->
        <Action ID="NAVIGATE_TO" obj="sink" />
      </Sequence>
      <!-- Place inside sink -->
      <Action ID="PLACE_INSIDE" obj="sink" />
    </Sequence>
  </BehaviorTree>
</root>
