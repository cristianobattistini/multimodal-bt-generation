<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to metal_tray -->
      <Action ID="NAVIGATE_TO" obj="metal_tray" />
      <!-- Navigate to burger_meat -->
      <Action ID="NAVIGATE_TO" obj="burger_meat" />
      <!-- Fallback: if GRASP burger_meat fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp burger_meat -->
        <Action ID="GRASP" obj="burger_meat" />
        <Sequence>
          <!-- Push burger_meat forward toward front edge of table -->
          <Action ID="PUSH" obj="burger_meat" />
          <!-- Grasp burger_meat -->
          <Action ID="GRASP" obj="burger_meat" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
