<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Check black_bowl is reachable before NAVIGATE_TO -->
      <Condition ID="IS_REACHABLE" obj="black_bowl" />
      <!-- Timeout: NAVIGATE_TO black_bowl within 20s -->
      <Timeout msec="20000">
        <!-- Navigate to black_bowl -->
        <Action ID="NAVIGATE_TO" obj="black_bowl" />
      </Timeout>
      <!-- Grasp black_bowl -->
      <Action ID="GRIP" obj="black_bowl" />
    </Sequence>
  </BehaviorTree>
</root>
