<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach plate -->
      <Action ID="APPROACH" obj="plate" />
      <!-- Pick square_bread -->
      <Action ID="PICK" obj="square_bread" />
      <!-- Check table is reachable before NAVIGATE_TO -->
      <Condition ID="IS_REACHABLE" obj="table" />
      <!-- Timeout: NAVIGATE_TO table within 15s -->
      <Timeout msec="15000">
        <!-- Navigate to table -->
        <Action ID="GO_TO" obj="table" />
      </Timeout>
      <!-- Go to table -->
      <Action ID="LAY_ON" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
