<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to gray_bowl -->
      <Action ID="NAVIGATE_TO" obj="gray_bowl" />
      <!-- Grasp gray_bowl -->
      <Action ID="GRASP" obj="gray_bowl" />
      <!-- Navigate to oven -->
      <Action ID="NAVIGATE_TO" obj="oven" />
      <!-- Fallback: if PLACE_INSIDE oven fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry PLACE_INSIDE oven up to 2 attempts -->
        <RetryUntilSuccessful num_attempts="2">
          <!-- Place inside oven -->
          <Action ID="PLACE_INSIDE" obj="oven" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push oven forward toward front edge of table -->
          <Action ID="PUSH" obj="oven" />
          <!-- Place inside oven -->
          <Action ID="PLACE_INSIDE" obj="oven" />
        </Sequence>
      </Fallback>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
