<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to apple -->
      <Action ID="NAVIGATE_TO" obj="apple" />
      <!-- Retry GRASP apple up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Timeout: GRASP apple within 15s -->
        <Timeout msec="15000">
          <!-- Grasp apple -->
          <Action ID="GRASP" obj="apple" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Navigate to pot -->
      <Action ID="APPROACH" obj="pot" />
      <!-- Approach pot -->
      <Action ID="PLACE_INSIDE" obj="apple" container="pot" />
    </Sequence>
  </BehaviorTree>
</root>
