<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to cup -->
      <Action ID="MOVE_TO" obj="cup" />
      <!-- Grab cup -->
      <Action ID="GRAB" obj="cup" />
      <!-- Timeout: NAVIGATE_TO hook within 10s -->
      <Timeout msec="10000">
        <!-- Navigate to hook -->
        <Action ID="MOVE_TO" obj="hook" />
      </Timeout>
      <!-- Move to hook -->
      <Action ID="HANG" obj="cup" hook="hook" />
      <!-- Hang cup on hook -->
      <Action ID="UNGRASP" />
    </Sequence>
  </BehaviorTree>
</root>
