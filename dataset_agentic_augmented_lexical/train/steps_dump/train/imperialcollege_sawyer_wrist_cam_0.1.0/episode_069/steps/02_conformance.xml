<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to kettle -->
      <Action ID="GO_TO" obj="kettle" />
      <!-- Check kettle is reachable before GRASP -->
      <Condition ID="IS_REACHABLE" obj="kettle" />
      <!-- Retry GRASP kettle up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Timeout: GRASP kettle within 15s -->
        <Timeout msec="15000">
          <!-- Grasp kettle -->
          <Action ID="PICK" obj="kettle" />
        </Timeout>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
