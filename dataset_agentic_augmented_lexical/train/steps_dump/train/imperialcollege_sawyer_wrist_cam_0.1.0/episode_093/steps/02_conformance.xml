<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to bowl_1 -->
      <Action ID="NAVIGATE_TO" obj="bowl_1" />
      <!-- Check bowl_1 is graspable before GRASP -->
      <Condition ID="IS_GRASPABLE" obj="bowl_1" />
      <!-- Fallback: if GRASP bowl_1 fails, try alternative to reposition -->
      <Fallback>
        <!-- Timeout: GRASP bowl_1 within 15s -->
        <Timeout msec="15000">
          <!-- Grasp bowl_1 -->
          <Action ID="GRASP" obj="bowl_1" />
        </Timeout>
        <Sequence>
          <!-- Push bowl_1 forward toward front edge of table -->
          <Action ID="PUSH" obj="bowl_1" />
          <!-- Grasp bowl_1 -->
          <Action ID="GRASP" obj="bowl_1" />
        </Sequence>
      </Fallback>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Navigate to bowl_2 -->
      <Action ID="NAVIGATE_TO" obj="bowl_2" />
      <!-- Grasp bowl_2 -->
      <Action ID="GRASP" obj="bowl_2" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Navigate to bowl_3 -->
      <Action ID="NAVIGATE_TO" obj="bowl_3" />
      <!-- Grasp bowl_3 -->
      <Action ID="GRASP" obj="bowl_3" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Navigate to bowl_4 -->
      <Action ID="NAVIGATE_TO" obj="bowl_4" />
      <!-- Grasp bowl_4 -->
      <Action ID="GRASP" obj="bowl_4" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Navigate to bowl_5 -->
      <Action ID="NAVIGATE_TO" obj="bowl_5" />
      <!-- Grasp bowl_5 -->
      <Action ID="GRASP" obj="bowl_5" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
