<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to blue_container -->
      <Action ID="MOVE_TO" obj="blue_container" />
      <!-- Navigate to lid -->
      <Action ID="NAVIGATE_TO" obj="lid" />
      <Sequence>
        <!-- Check lid is visible before GRASP -->
        <Condition ID="IS_VISIBLE" obj="lid" />
        <!-- Grasp lid -->
        <Action ID="GRASP" obj="lid" />
      </Sequence>
      <!-- Open lid -->
      <Action ID="OPEN" obj="lid" />
      <!-- Release -->
      <Action ID="UNGRASP" />
    </Sequence>
  </BehaviorTree>
</root>
