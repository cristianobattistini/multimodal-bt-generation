<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Check bottle is visible before NAVIGATE_TO -->
      <Condition ID="IS_VISIBLE" obj="bottle" />
      <!-- Timeout: NAVIGATE_TO bottle within 20s -->
      <Timeout msec="20000">
        <!-- Navigate to bottle -->
        <Action ID="NAVIGATE_TO" obj="bottle" />
      </Timeout>
      <!-- Grasp bottle -->
      <Action ID="GRASP" obj="bottle" />
      <!-- Open bottle -->
      <Action ID="OPEN" obj="bottle" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
