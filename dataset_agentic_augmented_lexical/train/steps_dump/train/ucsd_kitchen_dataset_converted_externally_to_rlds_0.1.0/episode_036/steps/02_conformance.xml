<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to oven_door -->
      <Action ID="NAVIGATE_TO" obj="oven_door" />
      <!-- Fallback: if GRASP oven_door fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp oven_door -->
        <Action ID="GRASP" obj="oven_door" />
        <Sequence>
          <!-- Push oven_door forward toward front edge of table -->
          <Action ID="PUSH" obj="oven_door" />
          <!-- Grasp oven_door -->
          <Action ID="GRASP" obj="oven_door" />
        </Sequence>
      </Fallback>
      <!-- Open oven_door -->
      <Action ID="OPEN" obj="oven_door" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
