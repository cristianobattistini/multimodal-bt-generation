<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Timeout: NAVIGATE_TO faucet within 15s -->
      <Timeout msec="15000">
        <!-- Navigate to faucet -->
        <Action ID="NAVIGATE_TO" obj="faucet" />
      </Timeout>
      <!-- Grasp faucet -->
      <Action ID="GRASP" obj="faucet" />
      <!-- Toggle on faucet -->
      <Action ID="SWITCH_ON" obj="faucet" />
      <!-- Switch on faucet -->
      <Action ID="LET_GO" />
    </Sequence>
  </BehaviorTree>
</root>
