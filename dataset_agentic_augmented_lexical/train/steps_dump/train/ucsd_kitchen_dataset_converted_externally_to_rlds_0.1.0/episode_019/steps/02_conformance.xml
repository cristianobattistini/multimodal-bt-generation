<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to faucet -->
      <Action ID="NAVIGATE_TO" obj="faucet" />
      <!-- Check faucet is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="faucet" />
      <!-- Retry GRASP faucet up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Grasp faucet -->
        <Action ID="GRASP" obj="faucet" />
      </RetryUntilSuccessful>
      <!-- Toggle on faucet -->
      <Action ID="TOGGLE_ON" obj="faucet" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
