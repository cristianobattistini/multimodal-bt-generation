<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to clear_bowl -->
      <Action ID="NAVIGATE_TO" obj="clear_bowl" />
      <!-- Navigate to yellow_ball -->
      <Action ID="NAVIGATE_TO" obj="yellow_ball" />
      <!-- Retry GRASP yellow_ball up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Grasp yellow_ball -->
        <Action ID="GRASP" obj="yellow_ball" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
