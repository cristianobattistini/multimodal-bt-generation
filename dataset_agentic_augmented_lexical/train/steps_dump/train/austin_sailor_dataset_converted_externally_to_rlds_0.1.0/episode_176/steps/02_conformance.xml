<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to bread -->
      <Action ID="NAVIGATE_TO" obj="bread" />
      <!-- Fallback: if GRASP bread fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp bread -->
        <Action ID="PICK" obj="bread" />
        <Sequence>
          <!-- Push bread forward toward front edge of table -->
          <Action ID="PUSH" obj="bread" />
          <!-- Grasp bread -->
          <Action ID="GRAB" obj="bread" />
        </Sequence>
      </Fallback>
      <!-- Pick bread -->
      <Action ID="GO_TO" obj="serving_area" />
      <!-- Place on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="serving_area" />
      <!-- Grab bread -->
      <Action ID="NAVIGATE_TO" obj="butter" />
      <!-- Go to serving_area -->
      <Action ID="GRAB" obj="butter" />
      <!-- Navigate to serving_area -->
      <Action ID="NAVIGATE_TO" obj="serving_area" />
      <!-- Place on serving_area -->
      <Action ID="PLACE_ON_TOP" obj="serving_area" />
      <!-- Grab butter -->
      <Action ID="GO_TO" obj="milk" />
      <!-- Grasp milk -->
      <Action ID="PICK" obj="milk" />
      <!-- Navigate to serving_area -->
      <Action ID="MOVE_TO" obj="serving_area" />
      <!-- Go to milk -->
      <Action ID="PLACE_ON_TOP" obj="serving_area" />
    </Sequence>
  </BehaviorTree>
</root>
