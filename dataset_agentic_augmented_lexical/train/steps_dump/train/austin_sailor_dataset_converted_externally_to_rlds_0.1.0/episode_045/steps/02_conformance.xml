<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Check pan is reachable before NAVIGATE_TO -->
      <Condition ID="IS_REACHABLE" obj="pan" />
      <!-- Timeout: NAVIGATE_TO pan within 15s -->
      <Timeout msec="15000">
        <!-- Navigate to pan -->
        <Action ID="APPROACH" obj="pan" />
      </Timeout>
      <!-- Approach pan -->
      <Action ID="GRIP" obj="pan" />
      <!-- Grip pan -->
      <Action ID="NAVIGATE_TO" obj="stove" />
      <!-- Place on stove -->
      <Action ID="PLACE_ON_TOP" obj="pan" surface="stove" />
      <!-- Place pan on stove -->
      <Action ID="APPROACH" obj="fish" />
      <!-- Approach fish -->
      <Action ID="GRIP" obj="fish" />
      <!-- Check pan is reachable before NAVIGATE_TO -->
      <Condition ID="IS_REACHABLE" obj="pan" />
      <!-- Timeout: NAVIGATE_TO pan within 15s -->
      <Timeout msec="15000">
        <!-- Navigate to pan -->
        <Action ID="GO_TO" obj="pan" />
      </Timeout>
      <!-- Grip fish -->
      <Action ID="PLACE_INSIDE" obj="pan" />
      <!-- Go to pan -->
      <Action ID="MOVE_TO" obj="sausage" />
      <!-- Grasp sausage -->
      <Action ID="GRIP" obj="sausage" />
      <!-- Check pan is reachable before NAVIGATE_TO -->
      <Condition ID="IS_REACHABLE" obj="pan" />
      <!-- Timeout: NAVIGATE_TO pan within 15s -->
      <Timeout msec="15000">
        <!-- Navigate to pan -->
        <Action ID="NAVIGATE_TO" obj="pan" />
      </Timeout>
      <!-- Move to sausage -->
      <Action ID="PLACE_INSIDE" obj="sausage" container="pan" />
    </Sequence>
  </BehaviorTree>
</root>
