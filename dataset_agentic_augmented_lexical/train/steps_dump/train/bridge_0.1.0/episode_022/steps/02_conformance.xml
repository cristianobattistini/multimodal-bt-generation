<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to silver_vessel -->
      <Action ID="NAVIGATE_TO" obj="silver_vessel" />
      <!-- Grip silver_vessel -->
      <Action ID="GRIP" obj="silver_vessel" />
      <!-- Move to purple_cloth -->
      <Action ID="MOVE_TO" obj="purple_cloth" />
      <!-- Fallback: if PLACE_ON_TOP purple_cloth fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place on purple_cloth -->
        <Action ID="PLACE_ON_TOP" obj="purple_cloth" />
        <Sequence>
          <!-- Push purple_cloth forward toward front edge of table -->
          <Action ID="SLIDE" obj="purple_cloth" />
          <!-- Place on purple_cloth -->
          <Action ID="SET_ON" obj="purple_cloth" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
