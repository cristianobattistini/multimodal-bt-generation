<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <Sequence>
        <!-- Check metal_pot is visible before NAVIGATE_TO -->
        <Condition ID="IS_VISIBLE" obj="metal_pot" />
        <!-- Navigate to metal_pot -->
        <Action ID="NAVIGATE_TO" obj="metal_pot" />
      </Sequence>
      <!-- Grasp orange_object -->
      <Action ID="GRASP" obj="orange_object" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
