<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach pepper -->
      <Action ID="APPROACH" obj="pepper" />
      <!-- Pick pepper -->
      <Action ID="PICK" obj="pepper" />
      <!-- Go to table -->
      <Action ID="GO_TO" obj="table" />
      <!-- Fallback: if PLACE_ON_TOP table fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place on table -->
        <Action ID="SET_ON" obj="table" />
        <Sequence>
          <!-- Push table forward toward front edge of table -->
          <Action ID="SLIDE" obj="table" />
          <!-- Place on table -->
          <Action ID="PUT_ON" obj="table" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
