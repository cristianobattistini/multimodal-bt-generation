<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to knife -->
      <Action ID="NAVIGATE_TO" obj="knife" />
      <!-- Fallback: if GRASP knife fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP knife up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Grasp knife -->
          <Action ID="GRASP" obj="knife" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push knife forward toward front edge of table -->
          <Action ID="PUSH" obj="knife" />
          <!-- Grasp knife -->
          <Action ID="GRASP" obj="knife" />
        </Sequence>
      </Fallback>
      <!-- Navigate to cutting_board -->
      <Action ID="NAVIGATE_TO" obj="cutting_board" />
      <!-- Place on cutting_board -->
      <Action ID="PLACE_ON_TOP" obj="cutting_board" />
    </Sequence>
  </BehaviorTree>
</root>
