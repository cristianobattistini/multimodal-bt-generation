<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to cloth -->
      <Action ID="NAVIGATE_TO" obj="cloth" />
      <!-- Fallback: if GRASP cloth fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp cloth -->
        <Action ID="GRASP" obj="cloth" />
        <Sequence>
          <!-- Push cloth forward toward front edge of table -->
          <Action ID="PUSH" obj="cloth" />
          <!-- Grasp cloth -->
          <Action ID="GRASP" obj="cloth" />
        </Sequence>
      </Fallback>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
