<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to orange_cloth -->
      <Action ID="MOVE_TO" obj="orange_cloth" />
      <!-- Fallback: if GRASP orange_cloth fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp orange_cloth -->
        <Action ID="PICK" obj="orange_cloth" />
        <Sequence>
          <!-- Push orange_cloth forward toward front edge of table -->
          <Action ID="PUSH" obj="orange_cloth" />
          <!-- Grasp orange_cloth -->
          <Action ID="GRASP" obj="orange_cloth" />
        </Sequence>
      </Fallback>
      <!-- Pick orange_cloth -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
