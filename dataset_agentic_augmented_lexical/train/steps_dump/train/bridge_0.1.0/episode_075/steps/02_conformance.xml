<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to mushroom -->
      <Action ID="NAVIGATE_TO" obj="mushroom" />
      <!-- Grip mushroom -->
      <Action ID="GRIP" obj="mushroom" />
      <!-- Approach blue_cloth -->
      <Action ID="APPROACH" obj="blue_cloth" />
      <!-- Fallback: if PLACE_ON_TOP blue_cloth fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place on blue_cloth -->
        <Action ID="PLACE_ON_TOP" obj="blue_cloth" />
        <Sequence>
          <!-- Push blue_cloth forward toward front edge of table -->
          <Action ID="SLIDE" obj="blue_cloth" />
          <!-- Place on blue_cloth -->
          <Action ID="LAY_ON" obj="blue_cloth" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
