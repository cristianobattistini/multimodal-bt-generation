<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to red_fork -->
      <Action ID="MOVE_TO" obj="red_fork" />
      <!-- Retry GRASP red_fork up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Timeout: GRASP red_fork within 10s -->
        <Timeout msec="10000">
          <!-- Grasp red_fork -->
          <Action ID="GRASP" obj="red_fork" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
