<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach spatula -->
      <Action ID="APPROACH" obj="spatula" />
      <!-- Grasp spatula -->
      <Action ID="GRASP" obj="spatula" />
      <!-- Go to table -->
      <Action ID="GO_TO" obj="table" />
      <!-- Fallback: if PLACE_ON_TOP table fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place on table -->
        <Action ID="PLACE_ON_TOP" obj="spatula" surface="table" />
        <Sequence>
          <!-- Push table forward toward front edge of table -->
          <Action ID="PUSH" obj="table" />
          <!-- Place on table -->
          <Action ID="PLACE_ON_TOP" obj="table" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
