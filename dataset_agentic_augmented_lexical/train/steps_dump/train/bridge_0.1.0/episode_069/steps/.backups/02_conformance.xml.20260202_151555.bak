<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to salt -->
      <Action ID="NAVIGATE_TO" obj="salt" />
      <!-- Fallback: if GRASP salt fails, try PUSH, FLIP to reposition -->
      <Fallback>
        <!-- Grasp salt -->
        <Action ID="GRASP" obj="salt" />
        <Sequence>
          <!-- Push salt forward toward front edge of table -->
          <Action ID="PUSH" obj="salt" />
          <!-- Grasp salt -->
          <Action ID="GRASP" obj="salt" />
        </Sequence>
      </Fallback>
      <!-- Navigate to yellow_brush -->
      <Action ID="NAVIGATE_TO" obj="yellow_brush" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
