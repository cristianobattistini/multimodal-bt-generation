<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <Sequence>
        <!-- Check pot is reachable before GRASP -->
        <Condition ID="IS_REACHABLE" obj="pot" />
        <!-- Grasp pot -->
        <Action ID="GRASP" obj="pot" />
      </Sequence>
    </Sequence>
  </BehaviorTree>
</root>
