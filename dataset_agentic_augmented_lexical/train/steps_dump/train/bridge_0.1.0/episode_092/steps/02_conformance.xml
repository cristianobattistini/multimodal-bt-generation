<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to broccoli -->
      <Action ID="NAVIGATE_TO" obj="broccoli" />
      <!-- Grasp broccoli -->
      <Action ID="GRASP" obj="broccoli" />
      <!-- Navigate to metal_pot -->
      <Action ID="NAVIGATE_TO" obj="metal_pot" />
      <!-- Retry PLACE_INSIDE metal_pot up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Place inside metal_pot -->
        <Action ID="PLACE_INSIDE" obj="metal_pot" />
      </RetryUntilSuccessful>
      
    </Sequence>
  </BehaviorTree>
</root>
