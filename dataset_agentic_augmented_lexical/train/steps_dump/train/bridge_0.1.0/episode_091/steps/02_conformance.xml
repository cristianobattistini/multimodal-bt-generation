<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to basil_bottle -->
      <Action ID="NAVIGATE_TO" obj="basil_bottle" />
      <!-- Check basil_bottle is graspable before GRASP -->
      <Condition ID="IS_GRASPABLE" obj="basil_bottle" />
      <!-- Fallback: if GRASP basil_bottle fails, try alternative to reposition -->
      <Fallback>
        <!-- Grasp basil_bottle -->
        <Action ID="GRASP" obj="basil_bottle" />
        <Sequence>
          <!-- Push basil_bottle forward toward front edge of table -->
          <Action ID="PUSH" obj="basil_bottle" />
          <!-- Grasp basil_bottle -->
          <Action ID="GRASP" obj="basil_bottle" />
        </Sequence>
      </Fallback>
      <!-- Return basil_bottle upright (flip) -->
      <Action ID="FLIP" obj="basil_bottle" />
      <!-- Navigate to cardboard_fence -->
      <Action ID="NAVIGATE_TO" obj="cardboard_fence" />
      <!-- Place on cardboard_fence -->
      <Action ID="PLACE_ON_TOP" obj="cardboard_fence" />
    </Sequence>
  </BehaviorTree>
</root>
