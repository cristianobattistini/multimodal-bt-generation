<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to blue_fork -->
      <Action ID="NAVIGATE_TO" obj="blue_fork" />
      <!-- Retry GRASP blue_fork up to 5 attempts -->
      <RetryUntilSuccessful num_attempts="5">
        <!-- Grasp blue_fork -->
        <Action ID="GRAB" obj="blue_fork" />
      </RetryUntilSuccessful>
      <!-- Grab blue_fork -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="blue_fork" surface="table" />
    </Sequence>
  </BehaviorTree>
</root>
