<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to pot -->
      <Action ID="MOVE_TO" obj="pot" />
      <!-- Retry GRASP pot up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Timeout: GRASP pot within 10s -->
        <Timeout msec="10000">
          <!-- Grasp pot -->
          <Action ID="GRAB" obj="pot" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Grab pot -->
      <Action ID="APPROACH" obj="yellow_cloth" />
      <!-- Approach yellow_cloth -->
      <Action ID="PLACE_ON_TOP" obj="yellow_cloth" />
    </Sequence>
  </BehaviorTree>
</root>
