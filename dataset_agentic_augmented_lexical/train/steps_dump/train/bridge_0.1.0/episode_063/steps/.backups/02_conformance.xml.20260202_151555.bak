<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Check pot is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="pot" />
      <!-- Retry GRASP pot up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Grasp pot -->
        <Action ID="GRASP" obj="pot" />
      </RetryUntilSuccessful>
      <!-- Navigate to yellow_towel -->
      <Action ID="NAVIGATE_TO" obj="yellow_towel" />
      <!-- Place on yellow_towel -->
      <Action ID="PLACE_ON_TOP" obj="yellow_towel" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
