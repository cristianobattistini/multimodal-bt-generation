<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to white_object -->
      <Action ID="GO_TO" obj="white_object" />
      <!-- Grasp white_object -->
      <Action ID="GRASP" obj="white_object" />
      <!-- Approach pot_on_table -->
      <Action ID="APPROACH" obj="pot_on_table" />
      <!-- Retry PLACE_INSIDE pot_on_table up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Place inside pot_on_table -->
        <Action ID="PLACE_INSIDE" obj="pot_on_table" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
