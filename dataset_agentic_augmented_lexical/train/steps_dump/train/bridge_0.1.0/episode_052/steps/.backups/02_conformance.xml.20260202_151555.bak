<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to cup -->
      <Action ID="NAVIGATE_TO" obj="cup" />
      <!-- Grasp cup -->
      <Action ID="GRASP" obj="cup" />
      <!-- Navigate to stovetop -->
      <Action ID="NAVIGATE_TO" obj="stovetop" />
      <!-- Fallback: if PLACE_ON_TOP stovetop fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place on stovetop -->
        <Action ID="PLACE_ON_TOP" obj="stovetop" />
        <Sequence>
          <!-- Push stovetop forward toward front edge of table -->
          <Action ID="PUSH" obj="stovetop" />
          <!-- Place on stovetop -->
          <Action ID="PLACE_ON_TOP" obj="stovetop" />
        </Sequence>
      </Fallback>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
