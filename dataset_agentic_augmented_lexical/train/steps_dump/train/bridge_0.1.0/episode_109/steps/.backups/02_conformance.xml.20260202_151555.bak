<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to mushroom -->
      <Action ID="NAVIGATE_TO" obj="mushroom" />
      <!-- Fallback: if GRASP mushroom fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP mushroom up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Timeout: GRASP mushroom within 15s -->
          <Timeout msec="15000">
            <!-- Grasp mushroom -->
            <Action ID="GRASP" obj="mushroom" />
          </Timeout>
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push mushroom forward toward front edge of table -->
          <Action ID="PUSH" obj="mushroom" />
          <!-- Grasp mushroom -->
          <Action ID="GRASP" obj="mushroom" />
        </Sequence>
      </Fallback>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Place inside pot -->
      <Action ID="PLACE_INSIDE" obj="pot" />
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
