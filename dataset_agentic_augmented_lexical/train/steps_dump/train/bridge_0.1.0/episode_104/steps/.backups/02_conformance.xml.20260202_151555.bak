<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to white_item -->
      <Action ID="NAVIGATE_TO" obj="white_item" />
      <!-- Grasp white_item -->
      <Action ID="GRASP" obj="white_item" />
      <!-- Navigate to pan -->
      <Action ID="NAVIGATE_TO" obj="pan" />
      <!-- Check pan is holding before PLACE_ON_TOP -->
      <Condition ID="IS_HOLDING" obj="pan" />
      <!-- Fallback: if PLACE_ON_TOP pan fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry PLACE_ON_TOP pan up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Place on pan -->
          <Action ID="PLACE_ON_TOP" obj="pan" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push pan forward toward front edge of table -->
          <Action ID="PUSH" obj="pan" />
          <!-- Place on pan -->
          <Action ID="PLACE_ON_TOP" obj="pan" />
        </Sequence>
      </Fallback>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
