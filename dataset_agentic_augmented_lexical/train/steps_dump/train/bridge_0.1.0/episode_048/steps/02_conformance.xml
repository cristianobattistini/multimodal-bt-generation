<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to pot -->
      <Action ID="NAVIGATE_TO" obj="pot" />
      <!-- Pick pot -->
      <Action ID="PICK" obj="pot" />
      <Sequence>
        <!-- Check orange_cloth is reachable before NAVIGATE_TO -->
        <Condition ID="IS_REACHABLE" obj="orange_cloth" />
        <!-- Navigate to orange_cloth -->
        <Action ID="APPROACH" obj="orange_cloth" />
      </Sequence>
      <!-- Approach orange_cloth -->
      <Action ID="PUT_ON" obj="orange_cloth" />
    </Sequence>
  </BehaviorTree>
</root>
