<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to basin -->
      <Action ID="GO_TO" obj="basin" />
      <Sequence>
        <!-- Check cup is visible before NAVIGATE_TO -->
        <Condition ID="IS_VISIBLE" obj="cup" />
        <!-- Navigate to cup -->
        <Action ID="MOVE_TO" obj="cup" />
      </Sequence>
      <!-- Move to cup -->
      <Action ID="GRAB" obj="cup" />
      <!-- Grab cup -->
      <Action ID="ROTATE_FLIP" obj="cup" />
      <!-- Rotate flip cup -->
      <Action ID="PLACE_INSIDE" obj="cup" container="basin" />
    </Sequence>
  </BehaviorTree>
</root>
