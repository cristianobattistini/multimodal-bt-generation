<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to pot -->
      <Action ID="MOVE_TO" obj="pot" />
      <!-- Grasp pot -->
      <Action ID="GRASP" obj="pot" />
      <!-- Rotate flip pot -->
      <Action ID="ROTATE_FLIP" obj="pot" />
      <!-- Timeout: NAVIGATE_TO sink within 20s -->
      <Timeout msec="20000">
        <!-- Navigate to sink -->
        <Action ID="MOVE_TO" obj="sink" />
      </Timeout>
      <!-- Move to sink -->
      <Action ID="PLACE_INSIDE" obj="sink" />
    </Sequence>
  </BehaviorTree>
</root>
