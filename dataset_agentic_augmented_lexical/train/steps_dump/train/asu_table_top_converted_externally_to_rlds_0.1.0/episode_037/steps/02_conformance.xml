<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Check red_square is visible before NAVIGATE_TO -->
      <Condition ID="IS_VISIBLE" obj="red_square" />
      <!-- Timeout: NAVIGATE_TO red_square within 10s -->
      <Timeout msec="10000">
        <!-- Navigate to red_square -->
        <Action ID="NAVIGATE_TO" obj="red_square" />
      </Timeout>
      <!-- Grasp red_square -->
      <Action ID="GRASP" obj="red_square" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
