<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to pepsi_can -->
      <Action ID="MOVE_TO" obj="pepsi_can" />
      <!-- Check pepsi_can is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="pepsi_can" />
      <!-- Fallback: if GRASP pepsi_can fails, try alternative to reposition -->
      <Fallback>
        <!-- Timeout: GRASP pepsi_can within 15s -->
        <Timeout msec="15000">
          <!-- Grasp pepsi_can -->
          <Action ID="GRASP" obj="pepsi_can" />
        </Timeout>
        <Sequence>
          <!-- Push pepsi_can forward toward front edge of table -->
          <Action ID="NUDGE" obj="pepsi_can" />
          <!-- Grasp pepsi_can -->
          <Action ID="GRAB" obj="pepsi_can" />
        </Sequence>
      </Fallback>
      <!-- Navigate to table -->
      <Action ID="MOVE_TO" obj="table" />
      <!-- Nudge pepsi_can -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
