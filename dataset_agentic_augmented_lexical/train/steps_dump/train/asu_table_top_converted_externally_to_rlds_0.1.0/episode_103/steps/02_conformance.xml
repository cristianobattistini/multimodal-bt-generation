<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to red_can -->
      <Action ID="NAVIGATE_TO" obj="red_can" />
      <!-- Check red_can is reachable before GRASP -->
      <Condition ID="IS_REACHABLE" obj="red_can" />
      <!-- Fallback: if GRASP red_can fails, try alternative to reposition -->
      <Fallback>
        <!-- Retry GRASP red_can up to 3 attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <!-- Grasp red_can -->
          <Action ID="GRASP" obj="red_can" />
        </RetryUntilSuccessful>
        <Sequence>
          <!-- Push red_can forward toward front edge of table -->
          <Action ID="PUSH" obj="red_can" />
          <!-- Grasp red_can -->
          <Action ID="PICK" obj="red_can" />
        </Sequence>
      </Fallback>
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
