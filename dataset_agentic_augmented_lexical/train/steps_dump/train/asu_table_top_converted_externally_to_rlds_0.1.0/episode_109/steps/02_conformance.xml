<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to red_cube -->
      <Action ID="GO_TO" obj="red_cube" />
      <!-- Check red_cube is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="red_cube" />
      <!-- Retry GRASP red_cube up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Grasp red_cube -->
        <Action ID="GRASP" obj="red_cube" />
      </RetryUntilSuccessful>
      <!-- Navigate to table -->
      <Action ID="MOVE_TO" obj="table" />
      <!-- Move to table -->
      <Action ID="PUT_ON" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
