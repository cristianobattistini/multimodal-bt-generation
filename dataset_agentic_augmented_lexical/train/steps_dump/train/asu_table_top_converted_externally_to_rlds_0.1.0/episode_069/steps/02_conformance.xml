<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to blue_can -->
      <Action ID="NAVIGATE_TO" obj="blue_can" />
      <!-- Check blue_can is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="blue_can" />
      <!-- Retry GRASP blue_can up to 3 attempts -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Grasp blue_can -->
        <Action ID="GRASP" obj="blue_can" />
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
