<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to plate -->
      <Action ID="NAVIGATE_TO" obj="plate" />
      <!-- Grasp plate -->
      <Action ID="GRASP" obj="plate" />
      <!-- Navigate to dish_rack -->
      <Action ID="NAVIGATE_TO" obj="dish_rack" />
      <!-- Fallback: if PLACE_INSIDE dish_rack fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place inside dish_rack -->
        <Action ID="PLACE_INSIDE" obj="dish_rack" />
        <Sequence>
          <!-- Push dish_rack forward toward front edge of table -->
          <Action ID="PUSH" obj="dish_rack" />
          <!-- Place inside dish_rack -->
          <Action ID="SET_IN" obj="dish_rack" />
        </Sequence>
      </Fallback>
      <!-- Navigate to cup -->
      <Action ID="NAVIGATE_TO" obj="cup" />
      <!-- Grasp cup -->
      <Action ID="GRASP" obj="cup" />
      <!-- Set in dish_rack -->
      <Action ID="APPROACH" obj="dish_rack" />
      <!-- Fallback: if PLACE_INSIDE dish_rack fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place inside dish_rack -->
        <Action ID="PLACE_INSIDE" obj="dish_rack" />
        <Sequence>
          <!-- Push dish_rack forward toward front edge of table -->
          <Action ID="PUSH" obj="dish_rack" />
          <!-- Place inside dish_rack -->
          <Action ID="PLACE_INSIDE" obj="dish_rack" />
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>
