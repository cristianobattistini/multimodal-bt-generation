<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Navigate to white_plate -->
      <Action ID="NAVIGATE_TO" obj="white_plate" />
      <!-- Grasp white_plate -->
      <Action ID="GRASP" obj="white_plate" />
      <!-- Navigate to red_plate -->
      <Action ID="NAVIGATE_TO" obj="red_plate" />
      <!-- Fallback: if PLACE_ON_TOP red_plate fails, try PUSH to reposition -->
      <Fallback>
        <!-- Place on red_plate -->
        <Action ID="PLACE_ON_TOP" obj="red_plate" />
        <Sequence>
          <!-- Push red_plate forward toward front edge of table -->
          <Action ID="PUSH" obj="red_plate" />
          <!-- Place on red_plate -->
          <Action ID="PLACE_ON_TOP" obj="red_plate" />
        </Sequence>
      </Fallback>
      <!-- Release -->
      <Action ID="RELEASE" />
    </Sequence>
  </BehaviorTree>
</root>
