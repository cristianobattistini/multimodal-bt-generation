<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to fridge_door -->
      <Action ID="MOVE_TO" obj="fridge_door" />
      <!-- Check fridge_door is visible before GRASP -->
      <Condition ID="IS_VISIBLE" obj="fridge_door" />
      <!-- Retry GRASP fridge_door up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Timeout: GRASP fridge_door within 15s -->
        <Timeout msec="15000">
          <!-- Grasp fridge_door -->
          <Action ID="LATCH_ONTO" obj="fridge_door" />
        </Timeout>
      </RetryUntilSuccessful>
      <!-- Latch onto fridge_door -->
      <Action ID="UNLOCK" obj="fridge_door" />
      <!-- Unlock fridge_door -->
      <Action ID="DROP" />
    </Sequence>
  </BehaviorTree>
</root>
