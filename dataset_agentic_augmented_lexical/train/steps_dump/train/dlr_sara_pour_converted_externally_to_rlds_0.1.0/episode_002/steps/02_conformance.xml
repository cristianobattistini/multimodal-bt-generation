<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Approach mug -->
      <Action ID="APPROACH" obj="mug" />
      <Sequence>
        <!-- Check mug is holding before POUR -->
        <Condition ID="IS_HOLDING" obj="mug" />
        <!-- Pour into mug -->
        <Action ID="POUR" obj="mug" />
      </Sequence>
      <!-- Return brown_pitcher upright (flip) -->
      <Action ID="FLIP" obj="brown_pitcher" />
    </Sequence>
  </BehaviorTree>
</root>
