<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Go to pink_cloth -->
      <Action ID="GO_TO" obj="pink_cloth" />
      <!-- Pick pink_cloth -->
      <Action ID="PICK" obj="pink_cloth" />
      <!-- Fold pink_cloth -->
      <Action ID="FOLD" obj="pink_cloth" />
      <Sequence>
        <!-- Check pink_cloth is holding before WIPE -->
        <Condition ID="IS_HOLDING" obj="pink_cloth" />
        <!-- Wipe pink_cloth -->
        <Action ID="RUB" obj="pink_cloth" />
      </Sequence>
      <!-- Rub pink_cloth -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PUT_ON" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
