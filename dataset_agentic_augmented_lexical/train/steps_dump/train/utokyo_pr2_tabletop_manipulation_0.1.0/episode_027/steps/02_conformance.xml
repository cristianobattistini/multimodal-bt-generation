<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Timeout: NAVIGATE_TO pink_cloth within 20s -->
      <Timeout msec="20000">
        <!-- Navigate to pink_cloth -->
        <Action ID="NAVIGATE_TO" obj="pink_cloth" />
      </Timeout>
      <!-- Grasp pink_cloth -->
      <Action ID="GRASP" obj="pink_cloth" />
      <!-- Fold pink_cloth -->
      <Action ID="FOLD" obj="pink_cloth" />
      <!-- Navigate to table -->
      <Action ID="NAVIGATE_TO" obj="table" />
      <!-- Place on table -->
      <Action ID="PLACE_ON_TOP" obj="table" />
    </Sequence>
  </BehaviorTree>
</root>
