<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Move to grape -->
      <Action ID="MOVE_TO" obj="grape" />
      <!-- Retry GRASP grape up to 2 attempts -->
      <RetryUntilSuccessful num_attempts="2">
        <!-- Timeout: GRASP grape within 15s -->
        <Timeout msec="15000">
          <!-- Grasp grape -->
          <Action ID="CLAMP" obj="grape" />
        </Timeout>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>
