<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <!-- Place keyboard on desk next to monitor -->
      <Action ID="NAVIGATE_TO" obj="keyboard.n.01_1"/>
      <Action ID="GRASP" obj="keyboard.n.01_1"/>
      <Action ID="NAVIGATE_TO" obj="monitor.n.04_1"/>
      <Action ID="PLACE_NEXT_TO" obj="monitor.n.04_1"/>
      <!-- Mouse is already on desk, ensure it's next to keyboard -->
      <Action ID="NAVIGATE_TO" obj="mouse.n.04_1"/>
      <Action ID="GRASP" obj="mouse.n.04_1"/>
      <Action ID="NAVIGATE_TO" obj="keyboard.n.01_1"/>
      <Action ID="PLACE_NEXT_TO" obj="keyboard.n.01_1"/>
      <!-- Move folder from chair to desk next to mouse -->
      <Action ID="NAVIGATE_TO" obj="folder.n.02_1"/>
      <Action ID="GRASP" obj="folder.n.02_1"/>
      <Action ID="NAVIGATE_TO" obj="mouse.n.04_1"/>
      <Action ID="PLACE_NEXT_TO" obj="mouse.n.04_1"/>
      <!-- Stack notebook on top of folder -->
      <Action ID="NAVIGATE_TO" obj="notebook.n.01_1"/>
      <Action ID="GRASP" obj="notebook.n.01_1"/>
      <Action ID="NAVIGATE_TO" obj="folder.n.02_1"/>
      <Action ID="PLACE_ON_TOP" obj="folder.n.02_1"/>
      <!-- Place pen on top of notebook -->
      <Action ID="NAVIGATE_TO" obj="pen.n.01_1"/>
      <Action ID="GRASP" obj="pen.n.01_1"/>
      <Action ID="NAVIGATE_TO" obj="notebook.n.01_1"/>
      <Action ID="PLACE_ON_TOP" obj="notebook.n.01_1"/>
      <!-- Position swivel chair next to desk -->
      <Action ID="NAVIGATE_TO" obj="swivel_chair.n.01_1"/>
      <Action ID="GRASP" obj="swivel_chair.n.01_1"/>
      <Action ID="NAVIGATE_TO" obj="desk.n.01_1"/>
      <Action ID="PLACE_NEXT_TO" obj="desk.n.01_1"/>
    </Sequence>
  </BehaviorTree>
</root>
